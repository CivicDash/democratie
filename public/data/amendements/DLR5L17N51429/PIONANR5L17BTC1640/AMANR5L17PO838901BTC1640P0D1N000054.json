{"amendement": {"@xmlns": "http://schemas.assemblee-nationale.fr/referentiel", "uid": "AMANR5L17PO838901BTC1640P0D1N000054", "chronotag": "1757950701957", "legislature": "17", "identification": {"numeroLong": "54 (Rect)", "numeroOrdreDepot": "54", "prefixeOrganeExamen": "AN", "numeroRect": "1"}, "examenRef": "EXANR5L17PO838901BTC1640P0D1", "texteLegislatifRef": "PIONANR5L17BTC1640", "triAmendement": "bcaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaom", "cardinaliteAmdtMultiples": "1", "amendementParentRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "signataires": {"auteur": {"typeAuteur": "D\u00e9put\u00e9", "gouvernementRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "acteurRef": "PA606098", "groupePolitiqueRef": "PO845425", "auteurRapporteurOrganeRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, "cosignataires": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "suffixe": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "libelle": "M.&#160;Marleix"}, "pointeurFragmentTexte": {"partieAmendableRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "division": {"titre": "Article 2", "articleDesignationCourte": "ART. 2", "articleDesignation": "ARTICLE 2", "type": "ARTICLE", "avant_A_Apres": "A", "divisionRattachee": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "articleAdditionnel": "false", "chapitreAdditionnel": "false", "urlDivisionTexteVise": "/17/textes/1640.asp#D_Article_2"}, "amendementStandard": {"alinea": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "corps": {"cartoucheInformatif": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenuAuteur": {"dispositif": "<p style=\"text-align: justify;\">R&#x00E9;diger ainsi cet article&nbsp;:</p><p style=\"text-align: justify;\">&#x00AB;&nbsp;L&#x2019;article&nbsp;L.&nbsp;743&#x2011;22 du code de l&#x2019;entr&#x00E9;e et du s&#x00E9;jour des &#x00E9;trangers et du droit d&#x2019;asile est ainsi modifi&#x00E9;&nbsp;:</p><p style=\"text-align: justify;\">&#x00AB;&nbsp;1&#x00B0; La seconde phrase du dernier alin&#x00E9;a est supprim&#x00E9;e ;</p><p style=\"text-align: justify;\">&#x00AB;&nbsp;2&#x00B0; Sont ajout&#x00E9;s deux alin&#x00E9;as ainsi r&#x00E9;dig&#x00E9;s&nbsp;:&#x00AB;&nbsp;Le quatri&#x00E8;me alin&#x00E9;a du pr&#x00E9;sent article est &#x00E9;galement applicablelorsque l&#x2019;int&#x00E9;ress&#x00E9; fait l&#x2019;objet d&#x2019;une peine d&#x2019;interdiction du territoire,&nbsp;d&#x2019;une condamnation d&#x00E9;finitive pour l&#x2019;un des crimes ou d&#x00E9;lits mentionn&#x00E9;s &#x00E0; l&#x2019;article&nbsp;L.&nbsp;742&#x2011;6,&nbsp;d&#x2019;une d&#x00E9;cision d&#x2019;expulsion ou d&#x2019;interdiction administrative du territoire, ou si son comportement constitue une menace d&#x2019;une particuli&#x00E8;re gravit&#x00E9; pour l&#x2019;ordre public.&nbsp;&#x00BB;</p><p style=\"text-align: justify;\">&#x00AB;&nbsp;L&#x2019;int&#x00E9;ress&#x00E9; est maintenu &#x00E0; la disposition de la justice jusqu&#x2019;&#x00E0; ce qu&#x2019;il soit statu&#x00E9; sur le fond.&nbsp;&#x00BB;</p>", "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p>Cet amendement met en coh&#x00E9;rence les champs d'application des articles 1er et 2. Il proc&#x00E8;de &#x00E0; des am&#x00E9;nagements r&#x00E9;dactionnels destin&#x00E9;s &#x00E0; accro&#x00EE;tre la lisibilit&#x00E9; du dispositif en inscrivant les nouveaux cas d'appel suspensif adopt&#x00E9;s par la commission dans un alin&#x00E9;a distinct.</p><p>&nbsp;</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2025-06-27", "datePublication": "2025-07-02", "soumisArticle40": "false", "etatDesTraitements": {"etat": {"code": "DI", "libelle": "Discut\u00e9"}, "sousEtat": {"code": "DI", "libelle": "Adopt\u00e9"}}, "dateSort": "2025-07-02T17:36:32+02:00", "sort": "Adopt\u00e9"}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO838901BTC1640P0D1N000054?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": "RUANR5L17S2025IDS29598", "article99": "false", "loiReference": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionCommune": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionIdentique": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "accordGouvernementDepotHorsDelai": "Sans objet"}}