{"amendement": {"@xmlns": "http://schemas.assemblee-nationale.fr/referentiel", "uid": "AMANR5L17PO420120B1907P0D1N001277", "chronotag": "1761665923299", "legislature": "17", "identification": {"numeroLong": "AS1277", "numeroOrdreDepot": "1277", "prefixeOrganeExamen": "CION-SOC", "numeroRect": "0"}, "examenRef": "EXANR5L17PO420120B1907P0D1", "texteLegislatifRef": "PRJLANR5L17B1907", "triAmendement": "bdiaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaago", "cardinaliteAmdtMultiples": "1", "amendementParentRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "signataires": {"auteur": {"typeAuteur": "D\u00e9put\u00e9", "gouvernementRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "acteurRef": "PA795244", "groupePolitiqueRef": "PO845485", "auteurRapporteurOrganeRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, "cosignataires": {"acteurRef": ["PA840817", "PA841931"]}, "suffixe": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "libelle": "M.&#160;Lenormand,  M.&#160;Bruneau et M.&#160;Mazaury"}, "pointeurFragmentTexte": {"partieAmendableRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "division": {"titre": "Article 9", "articleDesignationCourte": "ART. 9", "articleDesignation": "ARTICLE 9", "type": "ARTICLE", "avant_A_Apres": "A", "divisionRattachee": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "articleAdditionnel": "false", "chapitreAdditionnel": "false", "urlDivisionTexteVise": "/17/textes/1907.asp#D_Article_9"}, "amendementStandard": {"alinea": {"avant_A_Apres": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "numero": "5", "alineaDesignation": "Alin\u00e9a 5"}}}, "corps": {"cartoucheInformatif": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenuAuteur": {"dispositif": "<p style=\"text-align: justify;\">Supprimer les alin&#x00E9;as 5 &#x00E0; 16.&nbsp;</p><p>&nbsp;</p>", "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p style=\"text-align: justify;\">Cet amendement a pour objet de supprimer la mesure qui conduirait &#x00E0; r&#x00E9;duire la plage d&#x2019;exon&#x00E9;ration totale ou partielle de charges sociales des personnels, notamment des compagnies a&#x00E9;riennes.</p><p style=\"text-align: justify;\">En effet, s&#x2019;agissant de leurs salari&#x00E9;s, une grande partie d&#x2019;entre eux, notamment les personnels sol (PS) et navigants commerciaux (PNC), b&#x00E9;n&#x00E9;ficient de r&#x00E9;mun&#x00E9;rations comprises entre 1,6 et 2,2 fois le SMIC.</p><p style=\"text-align: justify;\">C&#x2019;est pourquoi refiscaliser ces salaires &#x00E0; 100&nbsp;%, et diminuer math&#x00E9;matiquement le taux d&#x2019;exon&#x00E9;ration des salaires compris entre 1,2 et 1,6 fois le SMIC, alors qu&#x2019;ils b&#x00E9;n&#x00E9;ficient aujourd&#x2019;hui d&#x2019;une exon&#x00E9;ration partielle, porterait un coup majeur &#x00E0; l&#x2019;&#x00E9;conomie et la comp&#x00E9;titivit&#x00E9; des compagnies a&#x00E9;riennes bas&#x00E9;es en outre-mer assujetties &#x00E0; cette mesure.</p><p style=\"text-align: justify;\">Il s&#x2019;agit pour l&#x00E9;gislateur de d&#x00E9;fendre le march&#x00E9; fran&#x00E7;ais et anticiper le co&#x00FB;t qui pourrait &#x00EA;tre in fine r&#x00E9;percut&#x00E9; sur les prix des billets.</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2025-10-20", "datePublication": "2025-10-27", "soumisArticle40": "false", "etatDesTraitements": {"etat": {"code": "DI", "libelle": "Discut\u00e9"}, "sousEtat": {"code": "DI", "libelle": "Non soutenu"}}, "dateSort": "2025-10-28T16:38:38+01:00", "sort": "Non soutenu"}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO420120B1907P0D1N001277?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "article99": "false", "loiReference": {"codeLoi": "s5-16", "divisionCodeLoi": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, "discussionCommune": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionIdentique": {"idDiscussion": "83197", "typePosition": "Milieu"}, "accordGouvernementDepotHorsDelai": "Sans objet"}}