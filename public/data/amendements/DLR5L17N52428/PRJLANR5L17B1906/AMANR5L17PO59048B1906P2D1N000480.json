tif": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenuAuteur": {"dispositifAmdtCreditPLF": {"listeProgrammes": {"programme": [{"libelle": "Infrastructures et services de transports", "programmeRef": "602757", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Affaires maritimes, p\u00eache et aquaculture", "programmeRef": "602759", "autorisationEngagement": "3000000", "creditPaiement": "3000000", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Paysages, eau et biodiversit\u00e9", "programmeRef": "602761", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Expertise, information g\u00e9ographique et m\u00e9t\u00e9orologie", "programmeRef": "602763", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Pr\u00e9vention des risques", "programmeRef": "602765", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "\u00c9nergie, climat et apr\u00e8s-mines", "programmeRef": "602767", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Service public de l'\u00e9nergie", "programmeRef": "602769", "autorisationEngagement": "-3000000", "creditPaiement": "-3000000", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Conduite et pilotage des politiques de l'\u00e9cologie, du d\u00e9veloppement et de la mobilit\u00e9 durables", "programmeRef": "602771", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Fonds d'acc\u00e9l\u00e9ration de la transition \u00e9cologique dans les territoires", "programmeRef": "602773", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "S\u00fbret\u00e9 nucl\u00e9aire et radioprotection", "programmeRef": "602775", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Ecologie \u2013 mise en extinction du plan de relance", "programmeRef": "602777", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}]}, "soldeAE": "0", "soldeCP": "0", "cpEgalAe": "true"}, "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p style=\"text-align: justify;\">Cet amendement du groupe Socialistes et apparent&#x00E9;s vise &#x00E0; r&#x00E9;tablir les cr&#x00E9;dits de la SNSM.</p><p style=\"text-align: justify;\">La s&#x00E9;curit&#x00E9; de mani&#x00E8;re g&#x00E9;n&#x00E9;rale et ici en particulier en mer ne devrait pas faire l&#x2019;objet de coupes budg&#x00E9;taires dans la mesure ou il s&#x2019;agit de vies humaines et d&#x2019;une diminution des chances de sauvetage.</p><p style=\"text-align: justify;\">La Soci&#x00E9;t&#x00E9; nationale de sauvetage en mer (SNSM), association reconnue d&#x2019;utilit&#x00E9; publique, partenaire indispensable de l&#x2019;&#x00C9;tat pour la r&#x00E9;alisation de la mission de secours en mer a vu&nbsp; ses cr&#x00E9;dits coup&#x00E9;s de 3 millions soit une baisse de 30&nbsp;% l'ann&#x00E9;e derni&#x00E8;re et fait une nouvelle fois l'objet d'une r&#x00E9;duction de cr&#x00E9;dits cette ann&#x00E9;e. La SNSM repose d&#x2019;ores et d&#x00E9;j&#x00E0; sur du volontariat. Il faut par exemple r&#x00E9;aliser un certain nombre de postes de secours pour &#x00EA;tre form&#x00E9;s aux premiers secours et mettre en pratique les gestes de secours appris en formation. Les sauveteurs sont pay&#x00E9;s autour du SMIC, parfois un peu plus en fonction de la dangerosit&#x00E9; de certaines plages.</p><p style=\"text-align: justify;\">C&#x2019;est un d&#x00E9;crochage de l&#x2019;ensemble des politiques publiques relatives &#x00E0; la s&#x00E9;curit&#x00E9; dans le domaine maritime. Tr&#x00E8;s concr&#x00E8;tement il s&#x2019;agit d&#x2019;une baisse des moyens pour les sauvetages en mer, la surveillance du trafic maritime, sur toute la signal&#x00E9;tique marine notamment &#x00E0; l&#x2019;approche des ports.</p><p style=\"text-align: justify;\">Le nombre de formateurs sera diminu&#x00E9;, avec pour cons&#x00E9;quence moins de surveillance sur les plages.</p><p style=\"text-align: justify;\">Afin d&#x2019;assurer la recevabilit&#x00E9; de cet amendement, ce dernier&nbsp;:</p><p style=\"text-align: justify;\">&#x2013;&nbsp;ponctionne 3 millions d&#x2019;euros (en AE et CP) sur l&#x2019;action 10 &#x00AB;&nbsp;Soutien &#x00E0; l'injection de biom&#x00E9;thane&nbsp;&#x00BB; du programme 345 &#x00AB;&nbsp;Service public de l&#x2019;&#x00E9;nergie&nbsp;&#x00BB;&nbsp;;</p><p style=\"text-align: justify;\">&#x2013;&nbsp;abonde de 3 millions(en AE et CP) l&#x2019;action 1 du programme 205.</p><p style=\"text-align: justify;\">Notre volont&#x00E9; n&#x2019;est pas de r&#x00E9;duire les cr&#x00E9;dits du programme 345 &#x00AB;&nbsp;Service public de l&#x2019;&#x00E9;nergie&nbsp;&#x00BB;, c&#x2019;est la raison pour laquelle nous demandons au Gouvernement de lever le gage.</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2025-10-29", "datePublication": "2025-11-13", "soumisArticle40": "false", "etatDesTraitements": {"etat": {"code": "DI", "libelle": "Discut\u00e9"}, "sousEtat": {"code": "DI", "libelle": "Adopt\u00e9"}}, "dateSort": "2025-11-12T21:11:06+01:00", "sort": "Adopt\u00e9"}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO59048B1906P2D1N000480?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "article99": "false", "loiReference": {"codeLoi": "2", "divisionCodeLoi": "1"}, "discussionCommune": {"idDiscussion": "34733", "typePosition": "Premier"}, "discussionIdentique": {"idDiscussion": "84663", "typePosition": "Premier"}, "accordGouvernementDepotHorsDelai": "Sans objet"}}