{"amendement": {"@xmlns": "http://schemas.assemblee-nationale.fr/referentiel", "uid": "AMANR5L17PO59048B1906P2D1N001620", "chronotag": "1762701856308", "legislature": "17", "identification": {"numeroLong": "II-CF1620", "numeroOrdreDepot": "1620", "prefixeOrganeExamen": "CION_FIN", "numeroRect": "0"}, "examenRef": "EXANR5L17PO59048B1906P2D1", "texteLegislatifRef": "PRJLANR5L17B1906", "triAmendement": "jcaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaabw", "cardinaliteAmdtMultiples": "1", "amendementParentRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "signataires": {"auteur": {"typeAuteur": "D\u00e9put\u00e9", "gouvernementRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "acteurRef": "PA332228", "groupePolitiqueRef": "PO845470", "auteurRapporteurOrganeRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, "cosignataires": {"acteurRef": ["PA794278", "PA841431", "PA719032", "PA721844", "PA795270", "PA720138", "PA795026"]}, "suffixe": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "libelle": "M.&#160;Benoit,  M.&#160;Albertini, Mme&#160;Colin-Oesterl&#233;, M.&#160;Bouyx, Mme&#160;Piron, Mme&#160;Poussier-Winsback, Mme&#160;Saint-Paul et Mme&#160;Violland"}, "pointeurFragmentTexte": {"partieAmendableRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "division": {"titre": "ARTICLE 81", "articleDesignationCourte": "ART. 81", "articleDesignation": "ARTICLE 81", "type": "ARTICLE", "avant_A_Apres": "A", "divisionRattachee": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "articleAdditionnel": "false", "chapitreAdditionnel": "false", "urlDivisionTexteVise": "/17/textes/1906C.asp#D_ARTICLE_81"}, "missionVisee": {"codeEtat": "B", "codeMissionMinefi": "TB", "libelleMission": "Travail, emploi et administration des minist\u00e8res sociaux", "missionRef": "3373"}, "amendementStandard": {"alinea": {"avant_A_Apres": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "numero": "5", "alineaDesignation": "Alin\u00e9a 5"}}}, "corps": {"cartoucheInformatif": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenuAuteur": {"dispositif": "<p style=\"text-align: justify;\">Supprimer l&#x2019;alin&#x00E9;a&nbsp;5.</p>", "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p style=\"text-align: justify;\">Le pr&#x00E9;sent amendement vise &#x00E0; r&#x00E9;int&#x00E9;grer les bilans de comp&#x00E9;tence parmi les&nbsp;actions &#x00E9;ligibles au compte personnel de formation.</p><p style=\"text-align: justify;\">Le bilan de comp&#x00E9;tences constitue un outil essentiel d&#x2019;orientation et d&#x2019;accompagnement des actifs dans la construction de leur trajectoire professionnelle. Il repr&#x00E9;sente, pour de nombreux salari&#x00E9;s ou demandeurs d&#x2019;emploi en reconversion, une &#x00E9;tape pr&#x00E9;alable indispensable &#x00E0; toute d&#x00E9;marche de formation ou de reclassement.</p><p style=\"text-align: justify;\">La suppression de son financement par le CPF aurait pour effet de restreindre l&#x2019;acc&#x00E8;s autonome &#x00E0; cet accompagnement, en particulier pour les publics les plus fragiles, &#x00E9;loign&#x00E9;s de l&#x2019;emploi ou faiblement qualifi&#x00E9;s.</p><p style=\"text-align: justify;\">En outre, le co&#x00FB;t des bilans de comp&#x00E9;tences demeure marginal au regard des d&#x00E9;penses globales du CPF, alors que leur impact est d&#x00E9;terminant&nbsp;: ils contribuent &#x00E0; pr&#x00E9;venir les ruptures de parcours, &#x00E0; &#x00E9;viter les formations inadapt&#x00E9;es et &#x00E0; favoriser des reconversions r&#x00E9;ussies.</p><p style=\"text-align: justify;\">Le pr&#x00E9;sent amendement vise ainsi &#x00E0; r&#x00E9;affirmer le r&#x00F4;le du bilan de comp&#x00E9;tences comme outil de pr&#x00E9;vention et de s&#x00E9;curisation des transitions professionnelles, pleinement coh&#x00E9;rent avec les finalit&#x00E9;s du CPF.</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2025-10-31", "datePublication": "2025-11-09", "soumisArticle40": "false", "etatDesTraitements": {"etat": {"code": "DI", "libelle": "Discut\u00e9"}, "sousEtat": {"code": "DI", "libelle": "Tomb\u00e9"}}, "dateSort": "2025-11-09T12:13:25+01:00", "sort": "Tomb\u00e9"}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO59048B1906P2D1N001620?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "article99": "false", "loiReference": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionCommune": {"idDiscussion": "34445", "typePosition": "Milieu"}, "discussionIdentique": {"idDiscussion": "84467", "typePosition": "Milieu"}, "accordGouvernementDepotHorsDelai": "Sans objet"}}