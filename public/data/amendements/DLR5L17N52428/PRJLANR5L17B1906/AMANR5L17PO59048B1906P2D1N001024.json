rammeRef": "649989", "autorisationEngagement": "-2600000", "creditPaiement": "-2600000", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Vie \u00e9tudiante", "programmeRef": "649991", "autorisationEngagement": "2600000", "creditPaiement": "2600000", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Recherches scientifiques et technologiques pluridisciplinaires", "programmeRef": "649993", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Recherche spatiale", "programmeRef": "649995", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Recherche dans les domaines de l'\u00e9nergie, du d\u00e9veloppement et de la mobilit\u00e9 durables", "programmeRef": "649997", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Recherche et enseignement sup\u00e9rieur en mati\u00e8re \u00e9conomique et industrielle", "programmeRef": "649999", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Recherche duale (civile et militaire)", "programmeRef": "650001", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Enseignement sup\u00e9rieur et recherche agricoles", "programmeRef": "650003", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}]}, "soldeAE": "0", "soldeCP": "0", "cpEgalAe": "true"}, "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p style=\"text-align: justify;\">Les plafonds de ressources relatifs aux bourses d&#x2019;enseignement sup&#x00E9;rieur et les montants correspondant &#x00E0; chaque &#x00E9;chelon sont fix&#x00E9;s chaque ann&#x00E9;e par arr&#x00EA;t&#x00E9;. Les montants de r&#x00E9;f&#x00E9;rence sont nationaux et ne comprennent pas d&#x2019;indexation sp&#x00E9;cifique pour la Nouvelle-Cal&#x00E9;donie qui conna&#x00EE;t pourtant des sp&#x00E9;cificit&#x00E9;s &#x00E9;conomiques en termes de co&#x00FB;t de la vie et de revenus.</p><p style=\"text-align: justify;\">Ainsi, seuls 27&nbsp;% des &#x00E9;tudiants cal&#x00E9;doniens remplissent les crit&#x00E8;res d&#x2019;&#x00E9;ligibilit&#x00E9; pour les bourses de l&#x2019;&#x00C9;tat sur crit&#x00E8;res sociaux, contre 38&nbsp;% des &#x00E9;tudiants dans l&#x2019;Hexagone, et 63&nbsp;% dans le reste des outre-mer.</p><p style=\"text-align: justify;\">L&#x2019;inad&#x00E9;quation des plafonds d&#x2019;&#x00E9;ligibilit&#x00E9; et des niveaux de bourses constituent un v&#x00E9;ritable frein &#x00E0; l&#x2019;acc&#x00E8;s &#x00E0; l&#x2019;enseignement sup&#x00E9;rieur dans ce territoire.</p><p style=\"text-align: justify;\">Pour rem&#x00E9;dier &#x00E0; cette diff&#x00E9;rence de traitement, cet amendement vise &#x00E0; transf&#x00E9;rer 2,6 M&#x20AC; de cr&#x00E9;dits de paiement et d&#x2019;autorisations d&#x2019;engagement de l&#x2019;action 14 &#x00AB;&nbsp;Immobilier&nbsp;&#x00BB; du programme 150 &#x00AB;&nbsp;Formations sup&#x00E9;rieures et recherches universitaires&nbsp;&#x00BB; vers l&#x2019;action 01 &#x00AB;&nbsp;Aides directes&nbsp;&#x00BB; du programme 231 &#x00AB;&nbsp;Vie &#x00E9;tudiante&nbsp;&#x00BB;. Cette somme correspond au montant que co&#x00FB;terait l&#x2019;octroi de bourses aux &#x00E9;tudiants cal&#x00E9;doniens qui en font la demande mais qui se la voient refuser en raison de l&#x2019;inadaptation des plafonds d&#x2019;&#x00E9;ligibilit&#x00E9;.</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2025-10-30", "datePublication": "2025-11-09", "soumisArticle40": "false", "etatDesTraitements": {"etat": {"code": "DI", "libelle": "Discut\u00e9"}, "sousEtat": {"code": "DI", "libelle": "Adopt\u00e9"}}, "dateSort": "2025-11-09T14:50:36+01:00", "sort": "Adopt\u00e9"}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO59048B1906P2D1N001024?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "article99": "false", "loiReference": {"codeLoi": "2", "divisionCodeLoi": "1"}, "discussionCommune": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionIdentique": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "accordGouvernementDepotHorsDelai": "Sans objet"}}