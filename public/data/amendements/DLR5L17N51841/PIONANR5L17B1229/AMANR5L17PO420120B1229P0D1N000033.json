{"amendement": {"@xmlns": "http://schemas.assemblee-nationale.fr/referentiel", "uid": "AMANR5L17PO420120B1229P0D1N000033", "chronotag": "1757948142211", "legislature": "17", "identification": {"numeroLong": "AS33", "numeroOrdreDepot": "33", "prefixeOrganeExamen": "CION-SOC", "numeroRect": "0"}, "examenRef": "EXANR5L17PO420120B1229P0D1", "texteLegislatifRef": "PIONANR5L17B1229", "triAmendement": "daaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaami", "cardinaliteAmdtMultiples": "1", "amendementParentRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "signataires": {"auteur": {"typeAuteur": "D\u00e9put\u00e9", "gouvernementRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "acteurRef": "PA794678", "groupePolitiqueRef": "PO845401", "auteurRapporteurOrganeRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, "cosignataires": {"acteurRef": ["PA794434", "PA841645", "PA840075", "PA642988", "PA794762", "PA842073", "PA840143", "PA795900", "PA793672", "PA794322", "PA793852", "PA793696", "PA795552", "PA793656", "PA793230"]}, "suffixe": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "libelle": "M.&#160;Frapp&#233;,  M.&#160;Bentz, M.&#160;Bernhardt, M.&#160;Casterman, M.&#160;de&#160;L&#233;pinau, Mme&#160;Dogor-Such, M.&#160;Dussausaye, M.&#160;Florquin, Mme&#160;Hamelet, Mme&#160;Loir, M.&#160;M&#233;nag&#233;, M.&#160;Meurin, M.&#160;Muller, M.&#160;Odoul, Mme&#160;Pollet et Mme&#160;Ranc"}, "pointeurFragmentTexte": {"partieAmendableRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "division": {"titre": "Article 2", "articleDesignationCourte": "ART. 2", "articleDesignation": "ARTICLE 2", "type": "ARTICLE", "avant_A_Apres": "A", "divisionRattachee": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "articleAdditionnel": "false", "chapitreAdditionnel": "false", "urlDivisionTexteVise": "/17/textes/1229.asp#D_Article_2"}, "amendementStandard": {"alinea": {"avant_A_Apres": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "numero": "5", "alineaDesignation": "Alin\u00e9a 5"}}}, "corps": {"cartoucheInformatif": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenuAuteur": {"dispositif": "<p style=\"text-align: justify;\">Supprimer les alin&#x00E9;as 5 et 6.</p>", "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p style=\"text-align: justify;\">Bien que l&#x2019;objectif de formation soit&nbsp;partag&#x00E9;, la rendre obligatoire&nbsp;ne tient pas compte de la r&#x00E9;alit&#x00E9; &#x00E9;conomique des entreprises fran&#x00E7;aises, en particulier des TPE et PME, qui font d&#x00E9;j&#x00E0; face &#x00E0; une pression financi&#x00E8;re croissante.</p><p style=\"text-align: justify;\">Alors que notre pays a enregistr&#x00E9; 66&nbsp;430 d&#x00E9;faillances d&#x2019;entreprises pour l&#x2019;ann&#x00E9;e 2024, nous connaissons tous la r&#x00E9;alit&#x00E9; &#x00E9;conomique actuelle, transf&#x00E9;rer une mission de sant&#x00E9; publique vers les entreprises sans aucun accompagnement ou soutien financier constitue une mesure in&#x00E9;quitable et contre-productive. Cette contrainte suppl&#x00E9;mentaire risque de fragiliser encore davantage les plus petites structures, au d&#x00E9;triment de l&#x2019;emploi et de la comp&#x00E9;titivit&#x00E9;.</p><p style=\"text-align: justify;\">Cet amendement propose donc la suppression de l&#x2019;alin&#x00E9;a&nbsp;6 afin d&#x2019;&#x00E9;viter une obligation g&#x00E9;n&#x00E9;ralis&#x00E9;e, en laissant aux employeurs la libert&#x00E9; d&#x2019;agir selon leurs moyens et leurs priorit&#x00E9;s, sans pour autant renoncer &#x00E0; la promotion des gestes de premiers secours.</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2025-05-01", "datePublication": "2025-05-07", "soumisArticle40": "false", "etatDesTraitements": {"etat": {"code": "DI", "libelle": "Discut\u00e9"}, "sousEtat": {"code": "DI", "libelle": "Rejet\u00e9"}}, "dateSort": "2025-05-07T16:08:05+02:00", "sort": "Rejet\u00e9"}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO420120B1229P0D1N000033?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "article99": "false", "loiReference": {"codeLoi": "0", "divisionCodeLoi": "s5-6"}, "discussionCommune": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionIdentique": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "accordGouvernementDepotHorsDelai": "Sans objet"}}