{"amendement": {"@xmlns": "http://schemas.assemblee-nationale.fr/referentiel", "uid": "AMANR5L17PO420120B1907P0D1N000236", "chronotag": "1761737833292", "legislature": "17", "identification": {"numeroLong": "AS236", "numeroOrdreDepot": "236", "prefixeOrganeExamen": "CION-SOC", "numeroRect": "0"}, "examenRef": "EXANR5L17PO420120B1907P0D1", "texteLegislatifRef": "PRJLANR5L17B1907", "triAmendement": "boaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaabef", "cardinaliteAmdtMultiples": "1", "amendementParentRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "signataires": {"auteur": {"typeAuteur": "D\u00e9put\u00e9", "gouvernementRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "acteurRef": "PA794058", "groupePolitiqueRef": "PO845425", "auteurRapporteurOrganeRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, "cosignataires": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "suffixe": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "libelle": "Mme&#160;Gruet"}, "pointeurFragmentTexte": {"partieAmendableRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "division": {"titre": "Article 12", "articleDesignationCourte": "APR\u00c8S ART. 12", "articleDesignation": "APR\u00c8S L'ARTICLE 12, ins\u00e9rer l'article suivant:", "type": "ARTICLE", "avant_A_Apres": "Apr\u00e8s", "divisionRattachee": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "articleAdditionnel": "true", "chapitreAdditionnel": "false", "urlDivisionTexteVise": "/17/textes/1907.asp#D_Article_12"}, "amendementStandard": {"alinea": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "corps": {"cartoucheInformatif": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenuAuteur": {"dispositif": "<p style=\"text-align: justify;\">L&#x2019;article&nbsp;L.&nbsp;131&#x2011;7 du code de la s&#x00E9;curit&#x00E9; sociale est compl&#x00E9;t&#x00E9; par un III ainsi r&#x00E9;dig&#x00E9;&nbsp;:</p><p style=\"text-align: justify;\">&#x00AB;&nbsp;III.&nbsp;&#x2013;&nbsp;Toute mesure de r&#x00E9;duction ou d&#x2019;exon&#x00E9;ration de cotisations de s&#x00E9;curit&#x00E9; sociale, institu&#x00E9;e &#x00E0; compter du&nbsp;1<sup>er</sup>&nbsp;janvier&nbsp;2025, est compens&#x00E9;e par la suppression, dans la m&#x00EA;me proportion, d&#x2019;une mesure de r&#x00E9;duction ou d&#x2019;exon&#x00E9;ration de cotisations de s&#x00E9;curit&#x00E9; sociale existante.&nbsp;&#x00BB;</p>", "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p style=\"text-align: justify;\">Cet amendement vise &#x00E0; r&#x00E9;tablir le principe de compensation syst&#x00E9;matique et int&#x00E9;grale des exon&#x00E9;rations de cotisations sociales et &#x00E0; limiter ainsi la mise en place de nouveaux dispositifs d&#x2019;exon&#x00E9;rations de cotisations sociales, en pr&#x00E9;voyant que chaque nouveau dispositif fasse l&#x2019;objet de la suppression d&#x2019;un dispositif existant pour un montant &#x00E9;quivalent. Cela pour &#x00E9;viter de doubler les franchises m&#x00E9;dicales sur les m&#x00E9;dicaments et les consultations.&nbsp;</p><p style=\"text-align: justify;\">Nous appelons &#x00E0; sa remise en place d&#x00E8;s 2026 pour contribuer &#x00E0; r&#x00E9;&#x00E9;quilibrer le syst&#x00E8;me.&nbsp;</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2025-10-19", "datePublication": "2025-10-27", "soumisArticle40": "false", "etatDesTraitements": {"etat": {"code": "DI", "libelle": "Discut\u00e9"}, "sousEtat": {"code": "DI", "libelle": "Rejet\u00e9"}}, "dateSort": "2025-10-29T12:37:08+01:00", "sort": "Rejet\u00e9"}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO420120B1907P0D1N000236?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "article99": "false", "loiReference": {"codeLoi": "c s\u00e9curit\u00e9 sociale", "divisionCodeLoi": "L131-7"}, "discussionCommune": {"idDiscussion": "33107", "typePosition": "Milieu"}, "discussionIdentique": {"idDiscussion": "82737", "typePosition": "Milieu"}, "accordGouvernementDepotHorsDelai": "Sans objet"}}