APP_NAME=CivicDash
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://api.civicdash.fr

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Database (Docker)
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=civicdash
DB_USERNAME=civicdash
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# Broadcast, Cache, Queue (Docker)
BROADCAST_DRIVER=log
CACHE_DRIVER=redis
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# Redis (Docker)
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@civicdash.fr"
MAIL_FROM_NAME="${APP_NAME}"

# Meilisearch (Docker)
MEILISEARCH_HOST=http://meilisearch:7700
MEILISEARCH_KEY=CHANGE_ME_MEILISEARCH_MASTER_KEY

# Security
PEPPER=CHANGE_ME_GENERATE_WITH_openssl_rand_base64_32

# FranceConnect+ (à configurer avec vos clés)
FRANCECONNECT_CLIENT_ID=
FRANCECONNECT_CLIENT_SECRET=
FRANCECONNECT_REDIRECT_URI=https://api.civicdash.fr/auth/franceconnect/callback
FRANCECONNECT_ENVIRONMENT=production
FRANCECONNECT_DISCOVERY_URL=https://app.franceconnect.gouv.fr/api/v2/.well-known/openid-configuration

# Assemblée Nationale API
AN_API_BASE_URL=https://data.assemblee-nationale.fr
AN_API_KEY=

# Légifrance API (optionnel)
LEGIFRANCE_CLIENT_ID=
LEGIFRANCE_CLIENT_SECRET=

# AWS S3 (optionnel, pour stockage fichiers)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=eu-west-3
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Pusher (optionnel, pour notifications temps réel)
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=eu

VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# Sentry (optionnel, pour monitoring erreurs)
SENTRY_LARAVEL_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1

