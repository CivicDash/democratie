{"amendement": {"@xmlns": "http://schemas.assemblee-nationale.fr/referentiel", "uid": "AMANR5L17PO420120B1102P0D1N000242", "chronotag": "1744211907467", "legislature": "17", "identification": {"numeroLong": "AS242", "numeroOrdreDepot": "242", "prefixeOrganeExamen": "CION-SOC", "numeroRect": "0"}, "examenRef": "EXANR5L17PO420120B1102P0D1", "texteLegislatifRef": "PIONANR5L17B1102", "triAmendement": "acaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaqw", "cardinaliteAmdtMultiples": "1", "amendementParentRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "signataires": {"auteur": {"typeAuteur": "D\u00e9put\u00e9", "gouvernementRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "acteurRef": "PA794678", "groupePolitiqueRef": "PO845401", "auteurRapporteurOrganeRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, "cosignataires": {"acteurRef": ["PA794434", "PA795900", "PA793672", "PA721932", "PA793656"]}, "suffixe": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "libelle": "M.&#160;Frapp&#233;,  M.&#160;Bentz, Mme&#160;Hamelet, Mme&#160;Loir, Mme&#160;Lorho et Mme&#160;Pollet"}, "pointeurFragmentTexte": {"partieAmendableRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "division": {"titre": "Article PREMIER", "articleDesignationCourte": "ART. PREMIER", "articleDesignation": "ARTICLE PREMIER", "type": "ARTICLE", "avant_A_Apres": "A", "divisionRattachee": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "articleAdditionnel": "false", "chapitreAdditionnel": "false", "urlDivisionTexteVise": "/17/textes/1102.asp#D_Article_1er"}, "amendementStandard": {"alinea": {"avant_A_Apres": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "numero": "13", "alineaDesignation": "Alin\u00e9a 13"}}}, "corps": {"cartoucheInformatif": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenuAuteur": {"dispositif": "<p style=\"text-align: justify;\">&#x00C0; la premi&#x00E8;re phrase de l&#x2019;alin&#x00E9;a&nbsp;13, apr&#x00E8;s le mot&nbsp;: </p><p style=\"text-align: justify;\">&#x00AB;&nbsp;nomm&#x00E9;&nbsp;&#x00BB;, </p><p style=\"text-align: justify;\">ins&#x00E9;rer les mots&nbsp;:&nbsp;</p><p style=\"text-align: justify;\">&#x00AB;&nbsp;avec son accord&nbsp;&#x00BB;.</p>", "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p style=\"text-align: justify;\">L&#x2019;alin&#x00E9;a concern&#x00E9; pr&#x00E9;voit la nomination d&#x2019;un r&#x00E9;f&#x00E9;rent charg&#x00E9; de coordonner l&#x2019;acc&#x00E8;s aux soins palliatifs et d&#x2019;accompagnement. Toutefois, cette disposition ne pr&#x00E9;cise pas si cette nomination repose sur une acceptation volontaire du professionnel concern&#x00E9;.</p><p style=\"text-align: justify;\">Afin de garantir que cette mission, qui requiert un engagement sp&#x00E9;cifique et une implication importante, soit exerc&#x00E9;e dans les meilleures conditions, cet amendement pr&#x00E9;voit que le r&#x00E9;f&#x00E9;rent ne puisse &#x00EA;tre d&#x00E9;sign&#x00E9; qu&#x2019;avec son accord expr&#x00E8;s. Cette modification vise &#x00E0; assurer que la personne nomm&#x00E9;e adh&#x00E8;re pleinement &#x00E0; cette tache ainsi qu&#x2019;aux responsabilit&#x00E9;s qui en r&#x00E9;sultent, &#x00E9;vitant ainsi toute nomination impos&#x00E9;e qui pourrait &#x00EA;tre source de d&#x00E9;motivation ou d&#x2019;inad&#x00E9;quation avec les attentes du poste.</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2025-04-03", "datePublication": "2025-04-08", "soumisArticle40": "false", "etatDesTraitements": {"etat": {"code": "DI", "libelle": "Discut\u00e9"}, "sousEtat": {"code": "DI", "libelle": "Rejet\u00e9"}}, 