chapitreAdditionnel": "false", "urlDivisionTexteVise": "/17/textes/0732.asp#D_Article_unique"}, "amendementStandard": {"alinea": {"avant_A_Apres": "Apres", "numero": "2", "alineaDesignation": "Apr\u00e8s l'alin\u00e9a 2"}}}, "corps": {"cartoucheInformatif": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenuAuteur": {"dispositif": "<p style=\"text-align: justify;\">Apr&#x00E8;s l&#x2019;alin&#x00E9;a&nbsp;2, ins&#x00E9;rer l'alin&#x00E9;a suivant&nbsp;:</p><p style=\"text-align: justify;\">&#x00AB;&nbsp;Le salari&#x00E9; informe son employeur au moins&nbsp;soixante-douze heures &#x00E0; l&#x2019;avance de son absence.&nbsp;&#x00BB;</p>", "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p>Cet amendement vise &#x00E0; permettre aux entreprises de mieux anticiper les absences des salari&#x00E9;s participant &#x00E0; un don de sang, de plaquettes ou de plasma sur leur temps de travail, en pr&#x00E9;voyant un d&#x00E9;lai de pr&#x00E9;venance minimal de 72 heures.</p><p>Bien que le soutien au don sanguin soit essentiel et doive &#x00EA;tre encourag&#x00E9;, il importe &#x00E9;galement de pr&#x00E9;server la bonne organisation des entreprises, en particulier les plus petites, qui pourraient rencontrer des difficult&#x00E9;s en cas d&#x2019;absence impr&#x00E9;vue d&#x2019;un ou plusieurs salari&#x00E9;s.</p><p><br>Le d&#x00E9;lai de 72 heures retenu constitue un compromis &#x00E9;quilibr&#x00E9; entre la n&#x00E9;cessaire flexibilit&#x00E9; pour les donneurs et l&#x2019;exigence l&#x00E9;gitime des employeurs d&#x2019;organiser au mieux leurs activit&#x00E9;s.</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2025-05-22", "datePublication": "2025-05-27", "soumisArticle40": "false", "etatDesTraitements": {"etat": {"code": "DI", "libelle": "Discut\u00e9"}, "sousEtat": {"code": "DI", "libelle": "Tomb\u00e9"}}, "dateSort": "2025-05-27T21:46:11+02:00", "sort": "Tomb\u00e9"}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO420120B0732P0D1N000008?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "article99": "false", "loiReference": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionCommune": {"idDiscussion": "31494", "typePosition": "Milieu"}, "discussionIdentique": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "accordGouvernementDepotHorsDelai": "Sans objet"}}