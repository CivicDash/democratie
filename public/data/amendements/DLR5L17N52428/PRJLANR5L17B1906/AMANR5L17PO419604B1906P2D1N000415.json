xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenuAuteur": {"dispositifAmdtCreditPLF": {"listeProgrammes": {"programme": [{"libelle": "Enseignement scolaire public du premier degr\u00e9", "programmeRef": "622529", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Enseignement scolaire public du second degr\u00e9", "programmeRef": "622531", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Vie de l'\u00e9l\u00e8ve", "programmeRef": "622533", "autorisationEngagement": "1350000", "creditPaiement": "1350000", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Enseignement priv\u00e9 du premier et du second degr\u00e9s", "programmeRef": "622535", "autorisationEngagement": "-1350000", "creditPaiement": "-1350000", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Soutien de la politique de l'\u00e9ducation nationale", "programmeRef": "622537", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Enseignement technique agricole", "programmeRef": "622539", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}]}, "soldeAE": "0", "soldeCP": "0", "cpEgalAe": "true"}, "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p style=\"text-align: justify;\">Cet amendement des d&#x00E9;put&#x00E9;s Socialistes et apparent&#x00E9;s vise &#x00E0; r&#x00E9;tablir le budget de fonds sociaux.&nbsp;</p><p style=\"text-align: justify;\">Les enveloppes de fonds sociaux sont vers&#x00E9;es aux &#x00E9;tablissements pour apporter une aide exceptionnelle aux familles d&#x00E9;favoris&#x00E9;es, notamment pour permettre aux &#x00E9;l&#x00E8;ves dont les familles ne peuvent pas couvrir ces d&#x00E9;penses de pouvoir manger &#x00E0; la cantine, de pouvoir participer aux sorties et voyages scolaires, de pouvoir avoir les fournitures et manuels scolaires au m&#x00EA;me titre que les autres &#x00E9;l&#x00E8;ves.&nbsp;</p><p style=\"text-align: justify;\">Ces fonds sociaux dans les &#x00E9;tablissements permettent &#x00E9;galement de prendre en charge les changements de situations familiales en cours d&#x2019;ann&#x00E9;e scolaire, ce que le calendrier d&#x2019;examen des demandes des bourses ne permet pas de couvrir.&nbsp;</p><p style=\"text-align: justify;\">Dans un contexte d&#x2019;augmentation croissante des situations de pr&#x00E9;carit&#x00E9;, ces fonds sociaux ne peuvent pas faire l&#x2019;objet d&#x2019;&#x00E9;conomies, c&#x2019;est pour cela que le groupe socialistes et apparent&#x00E9;s propose de r&#x00E9;tablir le budget allou&#x00E9; en 2025.&nbsp;</p><p style=\"text-align: justify;\">&nbsp;Afin d&#x2019;assurer sa recevabilit&#x00E9; financi&#x00E8;re, cet amendement de cr&#x00E9;dits&nbsp;:</p><p style=\"text-align: justify;\">&#x2013;&nbsp;abonde de 1&nbsp;350&nbsp;000&nbsp;&#x20AC; en CP et en AE l&#x2019;action 04&nbsp;&#x2013;&nbsp;Action sociale&nbsp;&#x2013;&nbsp;du programme 230&nbsp;&#x2013;&nbsp;Vie de l&#x2019;&#x00E9;l&#x00E8;ve&nbsp;;</p><p style=\"text-align: justify;\">&#x2013;&nbsp;retire 1&nbsp;350&nbsp;000&nbsp;&#x20AC; en CP et en AE de l&#x2019;action 10&nbsp;&#x2013;&nbsp;Formation des personnels enseignants&nbsp;&#x2013;&nbsp;du programme 139&nbsp;&#x2013;&nbsp;Enseignement priv&#x00E9; du premier et du second degr&#x00E9;.</p><p style=\"text-align: justify;\">Notre intention n&#x2019;est pas de ponctionner le programme 139 et nous appelons le Gouvernement &#x00E0; lever ce gage.</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2025-10-30", "datePublication": "2025-11-04", "soumisArticle40": "false", "etatDesTraitements": {"etat": {"code": "DI", "libelle": "Discut\u00e9"}, "sousEtat": {"code": "DI", "libelle": "Rejet\u00e9"}}, "dateSort": "2025-11-04T22:54:20+01:00", "sort": "Rejet\u00e9"}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO419604B1906P2D1N000415?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "article99": "false", "loiReference": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionCommune": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionIdentique": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "accordGouvernementDepotHorsDelai": "Sans objet"}}