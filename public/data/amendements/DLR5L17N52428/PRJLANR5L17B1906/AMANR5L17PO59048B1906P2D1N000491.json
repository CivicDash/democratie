ormatif": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenuAuteur": {"dispositifAmdtCreditPLF": {"listeProgrammes": {"programme": [{"libelle": "Infrastructures et services de transports", "programmeRef": "603031", "autorisationEngagement": "33000000", "creditPaiement": "33000000", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Affaires maritimes, p\u00eache et aquaculture", "programmeRef": "603033", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Paysages, eau et biodiversit\u00e9", "programmeRef": "603035", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Expertise, information g\u00e9ographique et m\u00e9t\u00e9orologie", "programmeRef": "603037", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Pr\u00e9vention des risques", "programmeRef": "603039", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "\u00c9nergie, climat et apr\u00e8s-mines", "programmeRef": "603041", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Service public de l'\u00e9nergie", "programmeRef": "603043", "autorisationEngagement": "-33000000", "creditPaiement": "-33000000", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Conduite et pilotage des politiques de l'\u00e9cologie, du d\u00e9veloppement et de la mobilit\u00e9 durables", "programmeRef": "603045", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Fonds d'acc\u00e9l\u00e9ration de la transition \u00e9cologique dans les territoires", "programmeRef": "603047", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "S\u00fbret\u00e9 nucl\u00e9aire et radioprotection", "programmeRef": "603049", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Ecologie \u2013 mise en extinction du plan de relance", "programmeRef": "603051", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}]}, "soldeAE": "0", "soldeCP": "0", "cpEgalAe": "true"}, "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p style=\"text-align: justify;\">Cet amendement du groupe Socialistes et apparent&#x00E9;s vise &#x00E0; augmenter de 33 millions d&#x2019;euros le montant de l&#x2019;aide au transport combin&#x00E9; de marchandises (&#x00AB;&nbsp;aide &#x00E0; la pince&nbsp;&#x00BB;) pour compenser les surco&#x00FB;ts li&#x00E9;s aux ruptures de charge, portant ainsi le montant total &#x00E0; 80 millions d&#x2019;euros.</p><p style=\"text-align: justify;\">Le transport combin&#x00E9; est clairement identifi&#x00E9; comme le segment de march&#x00E9; le plus porteur pour le d&#x00E9;veloppement du fret ferroviaire dans les prochaines ann&#x00E9;es car il massifie le plus le transport de marchandises tout en profitant de la souplesse de la route pour les premiers et derniers kilom&#x00E8;tres.</p><p style=\"text-align: justify;\">Toutefois, si le tarif de la partie sur rail est int&#x00E9;ressant, la partie routi&#x00E8;re du dernier kilom&#x00E8;tre est la plus on&#x00E9;reuse. Cette situation cr&#x00E9;e une probl&#x00E9;matique du march&#x00E9; du premier et du dernier kilom&#x00E8;tre par conteneur dans le cadre du transport combin&#x00E9;.</p><p style=\"text-align: justify;\">Une aide &#x00E0; l&#x2019;exploitation du transport combin&#x00E9;, aussi appel&#x00E9;e &#x00AB;&nbsp;aide &#x00E0; la pince&nbsp;&#x00BB;, a &#x00E9;t&#x00E9; mise en place par l&#x2019;&#x00C9;tat. Cette aide de 23&nbsp;euros environ par op&#x00E9;ration de transbordement vise &#x00E0; r&#x00E9;duire l&#x2019;&#x00E9;cart de comp&#x00E9;titivit&#x00E9; entre le rail et la route en compensant les surco&#x00FB;ts li&#x00E9;s aux ruptures de charge du transport combin&#x00E9;.</p><p style=\"text-align: justify;\">Le montant de l&#x2019;enveloppe budg&#x00E9;taire consacr&#x00E9; &#x00E0; l&#x2019;aide &#x00E0; la pince a &#x00E9;t&#x00E9; port&#x00E9; &#x00E0; 47 millions d&#x2019;euros depuis 2021. La strat&#x00E9;gie nationale pour le d&#x00E9;veloppement du fret ferroviaire a pr&#x00E9;vu de maintenir ce niveau d&#x2019;aide jusqu&#x2019;en 2027 et le Gouvernement de l&#x2019;&#x00E9;poque avait repris l&#x2019;engagement de pr&#x00E9;server ce soutien compl&#x00E9;mentaire jusqu&#x2019;en 2030. Afin d&#x2019;accompagner la dynamique de d&#x00E9;veloppement du transport combin&#x00E9;, il est propos&#x00E9; d&#x2019;augmenter de 33 millions d&#x2019;euros le montant de l&#x2019;aide &#x00E0; la pince pour compenser les surco&#x00FB;ts li&#x00E9;s aux ruptures de charge, portant ainsi le montant total &#x00E0; 80 millions d&#x2019;euros en visant la&nbsp;sous-action 45 &#x00AB;&nbsp;Aides &#x00E0; l&#x2019;exploitation des services de transport combin&#x00E9;&nbsp;&#x00BB;.&nbsp;</p><p style=\"text-align: justify;\">Cet amendement fait suite &#x00E0; la recommandation n&#x00B0;38 de la mission d&#x2019;information transpartisane sur le r&#x00F4;le du transport ferroviaire dans le d&#x00E9;senclavement des territoires.</p><p style=\"text-align: justify;\">Ainsi, le pr&#x00E9;sent amendement&nbsp;:</p><p style=\"text-align: justify;\">&#x2013;&nbsp;Abonde &#x00E0; hauteur de 33 millions d&#x2019;euros en autorisations d&#x2019;engagement et cr&#x00E9;dits de paiement&nbsp;l&#x2019;action 45 &#x00AB;&nbsp;Transports combin&#x00E9;s&nbsp;&#x00BB; du programme 203 &#x00AB;&nbsp;Infrastructures et services de transports&nbsp;&#x00BB;.&nbsp;</p><p style=\"text-align: justify;\">&#x2013;&nbsp;Minore l&#x2019;action 9 &#x00AB;&nbsp;Soutien aux &#x00E9;nergies renouvelables &#x00E9;lectriques en m&#x00E9;tropole continentale&nbsp;&#x00BB; du programme 345 &#x00AB;&nbsp;Service public de l&#x2019;&#x00E9;nergie&nbsp;&#x00BB;. Cette proposition de mouvement de cr&#x00E9;dits est uniquement formelle, afin de respecter les r&#x00E8;gles budg&#x00E9;taires. Nous demandons ainsi au Gouvernement de lever le gage.</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2025-10-29", "datePublication": "2025-11-12", "soumisArticle40": "false", "etatDesTraitements": {"etat": {"code": "DI", "libelle": "Discut\u00e9"}, "sousEtat": {"code": "DI", "libelle": "Rejet\u00e9"}}, "dateSort": "2025-11-12T19:15:20+01:00", "sort": "Rejet\u00e9"}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO59048B1906P2D1N000491?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "article99": "false", "loiReference": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionCommune": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionIdentique": {"idDiscussion": "84685", "typePosition": "Premier"}, "accordGouvernementDepotHorsDelai": "Sans objet"}}