{"amendement": {"@xmlns": "http://schemas.assemblee-nationale.fr/referentiel", "uid": "AMANR5L17PO59046B0949P0D1N000016", "chronotag": "1757947689935", "legislature": "17", "identification": {"numeroLong": "DN16", "numeroOrdreDepot": "16", "prefixeOrganeExamen": "CION_DEF", "numeroRect": "0"}, "examenRef": "EXANR5L17PO59046B0949P0D1", "texteLegislatifRef": "PIONANR5L17B0949", "triAmendement": "gaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaai", "cardinaliteAmdtMultiples": "1", "amendementParentRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "signataires": {"auteur": {"typeAuteur": "Rapporteur", "gouvernementRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "acteurRef": "PA609332", "groupePolitiqueRef": "PO845419", "auteurRapporteurOrganeRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, "cosignataires": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "suffixe": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "libelle": "M.&#160;Faure, rapporteur"}, "pointeurFragmentTexte": {"partieAmendableRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "division": {"titre": "Article 4", "articleDesignationCourte": "ART. 4", "articleDesignation": "ARTICLE 4", "type": "ARTICLE", "avant_A_Apres": "A", "divisionRattachee": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "articleAdditionnel": "false", "chapitreAdditionnel": "false", "urlDivisionTexteVise": "/17/textes/0949.asp#D_Article_4"}, "amendementStandard": {"alinea": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "corps": {"cartoucheInformatif": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenuAuteur": {"dispositif": "<p style=\"text-align: justify;\">R&#x00E9;diger ainsi cet article&nbsp;:</p><p style=\"text-align: justify;\">&#x00AB;&nbsp;Apr&#x00E8;s le 3&#x00B0;&nbsp;<i>bis</i> de l&#x2019;article&nbsp;L.&nbsp;611&#x2011;5 du code des pensions militaires d&#x2019;invalidit&#x00E9; et des victimes de guerre, il est ins&#x00E9;r&#x00E9; un 3&#x00B0;&nbsp;<i>ter</i> ainsi r&#x00E9;dig&#x00E9;&nbsp;:</p><p style=\"text-align: justify;\">&#x00AB;&nbsp;3&#x00B0;&nbsp;<i>ter</i> D&#x2019;instruire et de statuer sur les demandes de r&#x00E9;paration d&#x00E9;pos&#x00E9;es au titre de l&#x2019;article&nbsp;3 de la loi n&#x00B0; portant reconnaissance de la Nation envers les rapatri&#x00E9;s d&#x2019;Indochine et r&#x00E9;paration des pr&#x00E9;judices subis par ceux-ci et leurs familles du fait de l&#x2019;indignit&#x00E9; de leurs conditions d&#x2019;accueil et de vie dans certaines structures sur le territoire fran&#x00E7;ais&nbsp;&#x00BB;.&nbsp;&#x00BB;.</p>", "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p>Cet amendement de r&#x00E9;daction globale vise &#x00E0; conf&#x00E9;rer une comp&#x00E9;tence &#x00E0; l&#x2019;Office national des combattants et des victimes de guerre pour instruire les demandes de r&#x00E9;paration d&#x00E9;pos&#x00E9;es au titre de l&#x2019;article 3 de la pr&#x00E9;sente proposition de loi, en lieu et place d&#x2019;une comp&#x00E9;tence de la&nbsp;Commission nationale ind&#x00E9;pendante de reconnaissance et de r&#x00E9;paration des pr&#x00E9;judices subis par les Harkis institu&#x00E9;e par la loi n&#x00B0; 2022-229 du 23 f&#x00E9;vrier 2022, qu&#x2019;il est propos&#x00E9; de laisser inchang&#x00E9;e et centr&#x00E9;e sur les Harkis et les autres personnes rapatri&#x00E9;es d&#x2019;Alg&#x00E9;rie anciennement de statut civil de droit local.&nbsp;</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2025-05-26", "datePublication": "2025-05-28", "soumisArticle40": "false", "etatDesTraitements": {"etat": {"code": "DI", "libelle": "Discut\u00e9"}, "sousEtat": {"code": "DI", "libelle": "Adopt\u00e9"}}, "dateSort": "2025-05-28T12:23:44+02:00", "sort": "Adopt\u00e9"}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO59046B0949P0D1N000016?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "article99": "false", "loiReference": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionCommune": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionIdentique": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "accordGouvernementDepotHorsDelai": "Sans objet"}}