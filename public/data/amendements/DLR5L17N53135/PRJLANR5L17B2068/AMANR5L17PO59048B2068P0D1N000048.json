 [{"libelle": "Performance et r\u00e9silience des b\u00e2timents de l'\u00c9tat et de ses op\u00e9rateurs", "programmeRef": "671391", "autorisationEngagementSupplementaire": "0", "creditPaiementSupplementaire": "0", "autorisationEngagementAnnule": "-200000000", "creditPaiementAnnule": "-18996184", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Transformation publique", "programmeRef": "671393", "autorisationEngagementSupplementaire": "0", "creditPaiementSupplementaire": "0", "autorisationEngagementAnnule": "-24061523", "creditPaiementAnnule": "-28883269", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Fonction publique", "programmeRef": "671395", "autorisationEngagementSupplementaire": "0", "creditPaiementSupplementaire": "0", "autorisationEngagementAnnule": "0", "creditPaiementAnnule": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Conduite et pilotage de la transformation et de la fonction publiques", "programmeRef": "671397", "autorisationEngagementSupplementaire": "0", "creditPaiementSupplementaire": "0", "autorisationEngagementAnnule": "0", "creditPaiementAnnule": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}]}, "totalAE": {"supplementaire": "0", "annule": "-224061523", "solde": "224061523"}, "totalCP": {"supplementaire": "0", "annule": "-47879453", "solde": "47879453"}, "cpEgalAe": "false"}, "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p style=\"text-align: justify;\">Par cet amendement, le groupe LFI demande la suppression des annulations de cr&#x00E9;dits de la mission Transformation et fonction publiques.</p><p style=\"text-align: justify;\">Alors que le Gouvernement organise m&#x00E9;thodiquement le d&#x00E9;mant&#x00E8;lement des comp&#x00E9;tences publiques, ces annulations aggravent la d&#x00E9;pendance de l&#x2019;&#x00C9;tat aux cabinets de conseil priv&#x00E9;s. L&#x2019;action &#x00AB;&nbsp;Innovation et transformation num&#x00E9;riques&nbsp;&#x00BB; a d&#x00E9;j&#x00E0; &#x00E9;t&#x00E9; supprim&#x00E9;e l&#x2019;ann&#x00E9;e derni&#x00E8;re, privant les administrations de profils techniques indispensables. Ces coupes budg&#x00E9;taires accentuent les difficult&#x00E9;s de recrutement dans la fonction publique, creusant un vide de comp&#x00E9;tences qui justifie ensuite le recours co&#x00FB;teux &#x00E0; l&#x2019;externalisation. Comme l&#x2019;a montr&#x00E9; la Cour des comptes, 890 millions d&#x2019;euros ont &#x00E9;t&#x00E9; vers&#x00E9;s aux cabinets de conseil en 2021, dont les trois quarts pour l&#x2019;informatique. Un tel m&#x00E9;pris pour les comp&#x00E9;tences publiques n&#x2019;est pas surprenant de la part d&#x2019;un Gouvernement qui poursuit l&#x2019;asphyxie financi&#x00E8;re de l&#x2019;&#x00C9;tat au profit du secteur priv&#x00E9;.</p><p style=\"text-align: justify;\">Afin de garantir l&#x2019;autonomie et l&#x2019;expertise de nos administrations et de mettre fin &#x00E0; la gabegie des cabinets de conseil, nous demandons la suppression de ces annulations.</p><p style=\"text-align: justify;\">Dans le d&#x00E9;tail, nous demandons la suppression des annulations de cr&#x00E9;dits de&nbsp;:</p><p style=\"text-align: justify;\">&#x2013;&nbsp;200&nbsp;000&nbsp;000&nbsp;&#x20AC; en AE et 18&nbsp;996&nbsp;184&nbsp;&#x20AC; en CP pr&#x00E9;vue pour le programme Performance et r&#x00E9;silience des b&#x00E2;timents de l&#x2019;&#x00C9;tat et de ses op&#x00E9;rateurs de la mission Transformation et fonction publiques.</p><p style=\"text-align: justify;\">&#x2013;&nbsp;24&nbsp;061&nbsp;523&nbsp;&#x20AC; en AE et 28&nbsp;883&nbsp;269&nbsp;&#x20AC; en CP pr&#x00E9;vue pour le programme Transformation publique de la mission Transformation et fonction publiques.</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2025-11-12", "datePublication": "2025-11-13", "soumisArticle40": "false", "etatDesTraitements": {"etat": {"code": "DI", "libelle": "Discut\u00e9"}, "sousEtat": {"code": "DI", "libelle": "Rejet\u00e9"}}, "dateSort": "2025-11-13T15:14:09+01:00", "sort": "Rejet\u00e9"}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO59048B2068P0D1N000048?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "article99": "false", "loiReference": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionCommune": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionIdentique": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "accordGouvernementDepotHorsDelai": "Sans objet"}}