{"amendement": {"@xmlns": "http://schemas.assemblee-nationale.fr/referentiel", "uid": "AMANR5L17PO59048B1906P1D1N001722", "chronotag": "1760996233979", "legislature": "17", "identification": {"numeroLong": "I-CF1722", "numeroOrdreDepot": "1722", "prefixeOrganeExamen": "CION_FIN", "numeroRect": "0"}, "examenRef": "EXANR5L17PO59048B1906P1D1", "texteLegislatifRef": "PRJLANR5L17B1906", "triAmendement": "awaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaei", "cardinaliteAmdtMultiples": "1", "amendementParentRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "signataires": {"auteur": {"typeAuteur": "D\u00e9put\u00e9", "gouvernementRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "acteurRef": "PA795722", "groupePolitiqueRef": "PO845407", "auteurRapporteurOrganeRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, "cosignataires": {"acteurRef": ["PA719550", "PA841431", "PA796078", "PA840235", "PA722000", "PA677483", "PA841601", "PA721474", "PA712014"]}, "suffixe": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "libelle": "M.&#160;Olive,  Mme&#160;Liliana&#160;Tanguy, Mme&#160;Colin-Oesterl&#233;, Mme&#160;Youssouffa, M.&#160;Fr&#233;bault, M.&#160;Buchou, M.&#160;Mazars, Mme&#160;Levasseur, M.&#160;Viry et M.&#160;Ledoux"}, "pointeurFragmentTexte": {"partieAmendableRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "division": {"titre": "ARTICLE 5", "articleDesignationCourte": "ART. 5", "articleDesignation": "ARTICLE 5", "type": "ARTICLE", "avant_A_Apres": "A", "divisionRattachee": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "articleAdditionnel": "false", "chapitreAdditionnel": "false", "urlDivisionTexteVise": "/17/textes/1906A.asp#D_ARTICLE_5"}, "amendementStandard": {"alinea": {"avant_A_Apres": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "numero": "10", "alineaDesignation": "Alin\u00e9a 10"}}}, "corps": {"cartoucheInformatif": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenuAuteur": {"dispositif": "<p>Supprimer l'alin&#x00E9;a 10.</p><p>&nbsp;</p>", "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p style=\"text-align: justify;\">Le pr&#x00E9;sent amendement vise &#x00E0; supprimer la disposition du projet de loi de finances&nbsp;pour 2026 qui pr&#x00E9;voit de soumettre &#x00E0; l&#x2019;imp&#x00F4;t sur le revenu les indemnit&#x00E9;s journali&#x00E8;res vers&#x00E9;es aux assur&#x00E9;s atteints d&#x2019;une affection longue dur&#x00E9;e (ALD).</p><p style=\"text-align: justify;\">Les personnes concern&#x00E9;es, atteintes de pathologies graves ou chroniques et confront&#x00E9;es &#x00E0; une perte durable de revenus, per&#x00E7;oivent ces indemnit&#x00E9;s non comme un avantage mais comme un revenu de remplacement en raison de leur incapacit&#x00E9; &#x00E0; travailler. Les imposer reviendrait &#x00E0; alourdir la charge financi&#x00E8;re de m&#x00E9;nages d&#x00E9;j&#x00E0; fragilis&#x00E9;s par la maladie, alors m&#x00EA;me que leurs d&#x00E9;penses de sant&#x00E9; demeurent &#x00E9;lev&#x00E9;es et que leur capacit&#x00E9; contributive est r&#x00E9;duite.</p><p style=\"text-align: justify;\">L&#x2019;exon&#x00E9;ration actuelle, pr&#x00E9;vue &#x00E0; l&#x2019;article 154 bis A du Code g&#x00E9;n&#x00E9;ral des imp&#x00F4;ts, traduit un principe de solidarit&#x00E9; qu'il convient de pr&#x00E9;server.</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2025-10-18", "datePublication": "2025-10-20", "soumisArticle40": "false", "etatDesTraitements": {"etat": {"code": "DI", "libelle": "Discut\u00e9"}, "sousEtat": {"code": "DI", "libelle": "Non soutenu"}}, "dateSort": "2025-10-20T23:36:55+02:00", "sort": "Non soutenu"}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO59048B1906P1D1N001722?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "article99": "false", "loiReference": {"codeLoi": "0", "divisionCodeLoi": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, "discussionCommune": {"idDiscussion": "32427", "typePosition": "Milieu"}, "discussionIdentique": {"idDiscussion": "81455", "typePosition": "Premier"}, "accordGouvernementDepotHorsDelai": "Sans objet"}}