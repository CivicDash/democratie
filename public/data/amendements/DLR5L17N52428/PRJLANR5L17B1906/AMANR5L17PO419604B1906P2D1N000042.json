}, "corps": {"cartoucheInformatif": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenuAuteur": {"dispositifAmdtCreditPLF": {"listeProgrammes": {"programme": [{"libelle": "Formations sup\u00e9rieures et recherche universitaire", "programmeRef": "583137", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Vie \u00e9tudiante", "programmeRef": "583139", "autorisationEngagement": "1", "creditPaiement": "1", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Recherches scientifiques et technologiques pluridisciplinaires", "programmeRef": "583141", "autorisationEngagement": "-1", "creditPaiement": "-1", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Recherche spatiale", "programmeRef": "583143", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Recherche dans les domaines de l'\u00e9nergie, du d\u00e9veloppement et de la mobilit\u00e9 durables", "programmeRef": "583145", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Recherche et enseignement sup\u00e9rieur en mati\u00e8re \u00e9conomique et industrielle", "programmeRef": "583147", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Recherche duale (civile et militaire)", "programmeRef": "583149", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Enseignement sup\u00e9rieur et recherche agricoles", "programmeRef": "583151", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}]}, "soldeAE": "0", "soldeCP": "0", "cpEgalAe": "true"}, "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p style=\"text-align: justify;\">Cet amendement d&#x2019;appel du groupe Socialistes et apparent&#x00E9;s vise &#x00E0; alerter sur la situation des &#x00E9;tudiants internationaux.</p><p style=\"text-align: justify;\">En 2024&#x2011;2025, selon le SIES, la France accueillait pr&#x00E8;s de 445&nbsp;000 &#x00E9;tudiants, faisant ainsi de notre pays, un des plus attractifs au monde pour l&#x2019;enseignement sup&#x00E9;rieur.</p><p style=\"text-align: justify;\">Ces &#x00E9;tudiants repr&#x00E9;sentent une richesse culturelle, scientifique et &#x00E9;conomique majeure pour notre pays, et pourtant de nombreux obstacles viennent perturber leur bonne int&#x00E9;gration.</p><p style=\"text-align: justify;\">La hausse progressive des frais d&#x2019;inscription, les obstacles persistants &#x00E0; l&#x2019;acc&#x00E8;s au logement, le gel des APL pour les &#x00E9;tudiants &#x00E9;trangers non boursiers, ainsi que la r&#x00E9;cente augmentation des taxes sur les demandes de visa constituent autant de freins &#x00E0; l&#x2019;int&#x00E9;gration durable des &#x00E9;tudiants internationaux en France.</p><p style=\"text-align: justify;\">Alors m&#x00EA;me que des pays comme le Canada ou l&#x2019;Allemagne d&#x00E9;veloppent des politiques actives pour attirer, former et retenir ces talents, la France doit r&#x00E9;affirmer sa vocation de terre d&#x2019;accueil et d&#x2019;opportunit&#x00E9;s pour la jeunesse du monde entier.</p><p style=\"text-align: justify;\">Cet amendement d&#x2019;appel vise donc &#x00E0; rappeler la n&#x00E9;cessit&#x00E9; de rester un pays attractif sur l&#x2019;accueil des &#x00E9;tudiants internationaux, en mettant en place des dispositifs d&#x2019;accueil favorables.</p><p style=\"text-align: justify;\">Afin d&#x2019;assurer sa recevabilit&#x00E9; financi&#x00E8;re, cet amendement&nbsp;:</p><p style=\"text-align: justify;\">&#x2013;&nbsp;abonde, en autorisations d&#x2019;engagement et en cr&#x00E9;dits de paiement, l&#x2019;action 01 &#x00AB;&nbsp;Aides directes&nbsp;&#x00BB; du programme 231 &#x00AB;&nbsp;Vie &#x00E9;tudiante&nbsp;&#x00BB; &#x00E0; hauteur de 1&nbsp;&#x20AC;&nbsp;</p><p style=\"text-align: justify;\">&#x2013;&nbsp;diminue d&#x2019;autant, en AE et CP, les cr&#x00E9;dits inscrits &#x00E0; l&#x2019;action 2, Agence Nationale de la Recherche, du programme 172 &#x00AB;&nbsp;Recherches scientifiques et technologiques pluridisciplinaires&nbsp;&#x00BB;.</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2025-10-23", "datePublication": "2025-10-28", "soumisArticle40": "false", "etatDesTraitements": {"etat": {"code": "DI", "libelle": "Discut\u00e9"}, "sousEtat": {"code": "DI", "libelle": "Adopt\u00e9"}}, "dateSort": "2025-10-28T21:27:59+01:00", "sort": "Adopt\u00e9"}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO419604B1906P2D1N000042?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "article99": "false", "loiReference": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionCommune": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionIdentique": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "accordGouvernementDepotHorsDelai": "Sans objet"}}