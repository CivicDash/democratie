{"amendement": {"@xmlns": "http://schemas.assemblee-nationale.fr/referentiel", "uid": "AMANR5L17PO838901BTC1364P0D1N000404", "chronotag": "1757948774538", "legislature": "17", "identification": {"numeroLong": "404", "numeroOrdreDepot": "404", "prefixeOrganeExamen": "AN", "numeroRect": "0"}, "examenRef": "EXANR5L17PO838901BTC1364P0D1", "texteLegislatifRef": "PIONANR5L17BTC1364", "triAmendement": "blaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaabttv", "cardinaliteAmdtMultiples": "1", "amendementParentRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "signataires": {"auteur": {"typeAuteur": "D\u00e9put\u00e9", "gouvernementRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "acteurRef": "PA794058", "groupePolitiqueRef": "PO845425", "auteurRapporteurOrganeRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, "cosignataires": {"acteurRef": ["PA608416", "PA346782", "PA840979", "PA794994", "PA722390", "PA330008", "PA793094"]}, "suffixe": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "libelle": "Mme&#160;Gruet,  M.&#160;Hetzel, M.&#160;Juvin, M.&#160;Le&#160;Fur, M.&#160;Portier, Mme&#160;Corneloup, M.&#160;Breton et M.&#160;Ray"}, "pointeurFragmentTexte": {"partieAmendableRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "division": {"titre": "Article 5", "articleDesignationCourte": "ART. 5", "articleDesignation": "ARTICLE 5", "type": "ARTICLE", "avant_A_Apres": "A", "divisionRattachee": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "articleAdditionnel": "false", "chapitreAdditionnel": "false", "urlDivisionTexteVise": "/17/textes/1364.asp#D_Article_5"}, "amendementStandard": {"alinea": {"avant_A_Apres": "Apres", "numero": "7", "alineaDesignation": "Apr\u00e8s l'alin\u00e9a 7"}}}, "corps": {"cartoucheInformatif": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenuAuteur": {"dispositif": "<p style=\"text-align: justify;\">Apr&#x00E8;s l&#x2019;alin&#x00E9;a&nbsp;7, ins&#x00E9;rer l&#x2019;alin&#x00E9;a suivant&nbsp;:</p><p style=\"text-align: justify;\">&#x00AB;&nbsp;Le m&#x00E9;decin consulte la personne qui assiste ou qui repr&#x00E9;sente la personne malade demandant &#x00E0; recourir &#x00E0; une aide active &#x00E0; mourir, afin de v&#x00E9;rifier que cette derni&#x00E8;re est en capacit&#x00E9; de&nbsp;comprendre la port&#x00E9;e de sa demande.&nbsp;&#x00BB;</p>", "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p style=\"text-align: justify;\">Afin de d&#x00E9;fendre ses int&#x00E9;r&#x00EA;ts, la personne prot&#x00E9;g&#x00E9;e peut &#x00EA;tre plac&#x00E9;e sous tutelle, curatelle ou sauvegarde de justice.&nbsp;</p><p style=\"text-align: justify;\">&#x00CA;tre plac&#x00E9; sous protection juridique signifie selon le minist&#x00E8;re de la Justice, que des facteurs tels que la maladie, le handicap, l&#x2019;accident, la s&#x00E9;nilit&#x00E9; ou la simplicit&#x00E9; d&#x2019;esprit peuvent alt&#x00E9;rer les capacit&#x00E9;s d&#x2019;une personne, la rendant incapable de d&#x00E9;fendre ses propres int&#x00E9;r&#x00EA;ts. Le juge peut alors d&#x00E9;cider d&#x2019;une mesure de protection juridique pour permettre &#x00E0; un tiers d&#x2019;assister cette personne dans la gestion de ses affaires.</p><p style=\"text-align: justify;\">&#x00C0; la lumi&#x00E8;re de cette d&#x00E9;finition, il appara&#x00EE;t difficile de comprendre pourquoi la personne qui assiste celle sous protection juridique devrait intervenir pour pr&#x00E9;server ses int&#x00E9;r&#x00EA;ts mat&#x00E9;riels sans &#x00EA;tre inclue dans la proc&#x00E9;dure de demande d&#x2019;aide active &#x00E0; mourir.</p><p style=\"text-align: justify;\">Cet amendement a pour objectif de rectifier cette incoh&#x00E9;rence.</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2025-05-06", "datePublication": "2025-05-21", "soumisArticle40": "true", "etatDesTraitements": {"etat": {"code": "DI", "libelle": "Discut\u00e9"}, "sousEtat": {"code": "DI", "libelle": "Rejet\u00e9"}}, "dateSort": "2025-05-21T16:25:40+02:00", "sort": "Rejet\u00e9"}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO838901BTC1364P0D1N000404?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": "RUANR5L17S2025IDS29393", "article99": "false", "loiReference": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionCommune": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionIdentique": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "accordGouvernementDepotHorsDelai": "Sans objet"}}