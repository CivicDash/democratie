rmatif": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenuAuteur": {"dispositifAmdtCreditPLF": {"listeProgrammes": {"programme": [{"libelle": "Infrastructures et services de transports", "programmeRef": "603295", "autorisationEngagement": "500000000", "creditPaiement": "500000000", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Affaires maritimes, p\u00eache et aquaculture", "programmeRef": "603297", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Paysages, eau et biodiversit\u00e9", "programmeRef": "603299", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Expertise, information g\u00e9ographique et m\u00e9t\u00e9orologie", "programmeRef": "603301", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Pr\u00e9vention des risques", "programmeRef": "603303", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "\u00c9nergie, climat et apr\u00e8s-mines", "programmeRef": "603305", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Service public de l'\u00e9nergie", "programmeRef": "603307", "autorisationEngagement": "-500000000", "creditPaiement": "-500000000", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Conduite et pilotage des politiques de l'\u00e9cologie, du d\u00e9veloppement et de la mobilit\u00e9 durables", "programmeRef": "603309", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Fonds d'acc\u00e9l\u00e9ration de la transition \u00e9cologique dans les territoires", "programmeRef": "603311", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "S\u00fbret\u00e9 nucl\u00e9aire et radioprotection", "programmeRef": "603313", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Ecologie \u2013 mise en extinction du plan de relance", "programmeRef": "603315", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}]}, "soldeAE": "0", "soldeCP": "0", "cpEgalAe": "true"}, "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p style=\"text-align: justify;\">Cet amendement du groupe Socialistes et apparent&#x00E9;s vise &#x00E0; traduire l&#x2019;une de nos propositions budg&#x00E9;taires en mati&#x00E8;re de relance du ferroviaire et de r&#x00E9;g&#x00E9;n&#x00E9;ration du r&#x00E9;seau.&nbsp;</p><p style=\"text-align: justify;\">Le r&#x00E9;seau ferroviaire fran&#x00E7;ais, qui s&#x2019;&#x00E9;tend sur pr&#x00E8;s de 30&nbsp;000 kilom&#x00E8;tres de lignes exploit&#x00E9;es, constitue un atout majeur pour la mobilit&#x00E9; et la transition &#x00E9;cologique.&nbsp;</p><p style=\"text-align: justify;\">Avec une moyenne d&#x2019;&#x00E2;ge des voies de 30 ans et certains composants pr&#x00E9;sentant un &#x00E9;tat de forte v&#x00E9;tust&#x00E9;, il n&#x00E9;cessite toutefois un effort de modernisation significatif afin de garantir sa fiabilit&#x00E9;, sa s&#x00E9;curit&#x00E9; et sa performance. Sans un effort d&#x2019;investissement suppl&#x00E9;mentaire, la p&#x00E9;rennit&#x00E9; et la performance du r&#x00E9;seau ferroviaire structurant seraient gravement compromises. L&#x2019;infrastructure nationale risquerait un d&#x00E9;crochage face aux exigences r&#x00E9;glementaires et &#x00E0; la concurrence europ&#x00E9;enne, notamment en mati&#x00E8;re de capacit&#x00E9;s, rel&#x00E9;guant la France &#x00E0; un r&#x00E9;seau de second rang.&nbsp;</p><p style=\"text-align: justify;\">Toutes les r&#x00E9;gions seraient expos&#x00E9;es &#x00E0; une d&#x00E9;gradation irr&#x00E9;versible de la qualit&#x00E9; de service&nbsp;:</p><p style=\"text-align: justify;\">&#x2013;&nbsp;4&nbsp;000 km de lignes, impactant plus de 2&nbsp;000 trains quotidiens, seraient directement concern&#x00E9;s entre 2028 et 2030&nbsp;;&nbsp;</p><p style=\"text-align: justify;\">&#x2013;&nbsp;10&nbsp;000 km de lignes, soit un tiers du r&#x00E9;seau, pourraient &#x00EA;tre menac&#x00E9;s dans les dix ann&#x00E9;es suivant 2028.</p><p style=\"text-align: justify;\">L&#x2019;&#x00C9;tat a fix&#x00E9; l&#x2019;objectif d&#x2019;accro&#x00EE;tre de 1,5 Md&#x20AC; le montant annuel des investissements destin&#x00E9;s &#x00E0; la r&#x00E9;g&#x00E9;n&#x00E9;ration et &#x00E0; la modernisation du r&#x00E9;seau pour atteindre 4,5 Md&#x20AC; par an. Le groupe SNCF s&#x2019;est engag&#x00E9; sur une trajectoire financi&#x00E8;re ambitieuse pour permettre le financement d&#x2019;un montant compris entre 1,2 Md&#x20AC; &#x00E0; 1,4 Md&#x20AC; par an, dont 500 M&#x20AC; par an au titre de l&#x2019;acc&#x00E9;l&#x00E9;ration demand&#x00E9;e de 1,5 Md&#x20AC;. Pour accompagnercet effort et anticiper le milliard par an &#x00E0; financer &#x00E0; partir de 2028 nous proposons de soutenir d&#x00E8;s ce projet de loi de finances la SNCF &#x00E0; hauteur de 500 millions ce qui permet d&#x2019;anticiper les besoins et d&#x2019;&#x00E9;viter une mont&#x00E9;e en charge importante &#x00E0; partir de 2028.&nbsp;</p><p style=\"text-align: justify;\">Afin d&#x2019;assurer sa recevabilit&#x00E9;, l&#x2019;amendement ponctionne 500 millions d&#x2019;euros en AE et CP de l&#x2019;action 12 &#x00AB;&nbsp;Soutien&nbsp;&#x00E0; la cog&#x00E9;n&#x00E9;ration au gaz nature et autres moyens thermiques&nbsp;&#x00BB; du programme 345 &#x00AB;&nbsp;Service public de l&#x2019;&#x00E9;nergie&nbsp;&#x00BB; afin d&#x2019;abonder 500 millions d&#x2019;euros en AE et CP l&#x2019;action 41 &#x00AB;&nbsp;Ferroviaire&nbsp;&#x00BB; du programme 203&nbsp;&#x00AB;&nbsp;Infrastructures et services de transports&nbsp;&#x00BB;.</p><p style=\"text-align: justify;\">Le but de notre groupe n&#x2019;est&nbsp;pas de r&#x00E9;duire les cr&#x00E9;dits allou&#x00E9;s au service public de l&#x2019;&#x00E9;nergie mais les r&#x00E8;gles de recevabilit&#x00E9; budg&#x00E9;taire obligent &#x00E0; ce gage.&nbsp;En cons&#x00E9;quence, nous demandons au Gouvernement de lever le gage.</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2025-10-29", "datePublication": "2025-11-11", "soumisArticle40": "false", "etatDesTraitements": {"etat": {"code": "DI", "libelle": "Discut\u00e9"}, "sousEtat": {"code": "DI", "libelle": "Tomb\u00e9"}}, "dateSort": "2025-11-12T18:36:39+01:00", "sort": "Tomb\u00e9"}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO59048B1906P2D1N000502?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "article99": "false", "loiReference": {"codeLoi": "1", "divisionCodeLoi": "41"}, "discussionCommune": {"idDiscussion": "34709", "typePosition": "Milieu"}, "discussionIdentique": {"idDiscussion": "84647", "typePosition": "Premier"}, "accordGouvernementDepotHorsDelai": "Sans objet"}}