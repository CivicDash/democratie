{"amendement": {"@xmlns": "http://schemas.assemblee-nationale.fr/referentiel", "uid": "AMANR5L17PO59048B1906P1D1N000022", "chronotag": "1761139873297", "legislature": "17", "identification": {"numeroLong": "I-CF22", "numeroOrdreDepot": "22", "prefixeOrganeExamen": "CION_FIN", "numeroRect": "0"}, "examenRef": "EXANR5L17PO59048B1906P1D1", "texteLegislatifRef": "PRJLANR5L17B1906", "triAmendement": "faaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaabwd", "cardinaliteAmdtMultiples": "1", "amendementParentRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "signataires": {"auteur": {"typeAuteur": "D\u00e9put\u00e9", "gouvernementRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "acteurRef": "PA720146", "groupePolitiqueRef": "PO845407", "auteurRapporteurOrganeRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, "cosignataires": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "suffixe": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "libelle": "M.&#160;Mass&#233;glia"}, "pointeurFragmentTexte": {"partieAmendableRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "division": {"titre": "ARTICLE 24", "articleDesignationCourte": "APR\u00c8S ART. 24", "articleDesignation": "APR\u00c8S L'ARTICLE 24, ins\u00e9rer l'article suivant:", "type": "ARTICLE", "avant_A_Apres": "Apr\u00e8s", "divisionRattachee": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "articleAdditionnel": "true", "chapitreAdditionnel": "false", "urlDivisionTexteVise": "/17/textes/1906A.asp#D_ARTICLE_24"}, "amendementStandard": {"alinea": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "corps": {"cartoucheInformatif": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenuAuteur": {"dispositif": "<p style=\"text-align: justify;\">Au&nbsp;2&#x00B0; de l&#x2019;article&nbsp;L.&nbsp;453&#x2011;70 du code des impositions sur les biens et services, le taux&nbsp;: &#x00AB;&nbsp;3&nbsp;%&nbsp;&#x00BB; est remplac&#x00E9;&#x0301; par le taux&nbsp;: &#x00AB;&nbsp;15&nbsp;%&nbsp;&#x00BB;.</p>", "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p style=\"text-align: justify;\">Cet amendement porte de 3&nbsp;% &#x00E0; 15&nbsp;% le taux de la taxe sur les services num&#x00E9;riques. Alors que plusieurs grandes entreprises du num&#x00E9;rique continuent de r&#x00E9;aliser des b&#x00E9;n&#x00E9;fices consid&#x00E9;rables en France, cette hausse vise &#x00E0; renforcer la justice fiscale et &#x00E0; assurer une meilleure participation de leur part &#x00E0; l&#x2019;effort collectif.</p><p style=\"text-align: justify;\">Cette disposition s&#x2019;inscrit dans le contexte g&#x00E9;opolitique actuel, &#x00E0; la suite notamment des annonces relatives &#x00E0; l&#x2019;accord conclu entre l&#x2019;Union europ&#x00E9;enne et les &#x00C9;tats-Unis sur la mise en &#x0153;uvre de droits de douane de 15&nbsp;% sur des produits europ&#x00E9;ens. Face &#x00E0; ces pressions, il est essentiel d&#x2019;affirmer la souverainet&#x00E9; fiscale de la France et de refuser que notre politique fiscale soit dict&#x00E9;e par des consid&#x00E9;rations ext&#x00E9;rieures ou des rapports de force commerciaux.</p><p style=\"text-align: justify;\">Par ailleurs, ce rel&#x00E8;vement de taux permettrait de d&#x00E9;gager des recettes suppl&#x00E9;mentaires significatives, utiles au financement de notre transition num&#x00E9;rique et &#x00E0; l&#x2019;accompagnement de notre propre &#x00E9;cosyst&#x00E8;me technologique.</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2025-10-15", "datePublication": "2025-10-21", "soumisArticle40": "false", "etatDesTraitements": {"etat": {"code": "DI", "libelle": "Discut\u00e9"}, "sousEtat": {"code": "DI", "libelle": "Tomb\u00e9"}}, "dateSort": "2025-10-22T15:30:59+02:00", "sort": "Tomb\u00e9"}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO59048B1906P1D1N000022?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "article99": "false", "loiReference": {"codeLoi": "CIBS", "divisionCodeLoi": "453-70"}, "discussionCommune": {"idDiscussion": "32537", "typePosition": "Milieu"}, "discussionIdentique": {"idDiscussion": "81889", "typePosition": "Premier"}, "accordGouvernementDepotHorsDelai": "Sans objet"}}