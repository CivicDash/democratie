{"amendement": {"@xmlns": "http://schemas.assemblee-nationale.fr/referentiel", "uid": "AMANR5L17PO420120B1229P0D1N000029", "chronotag": "1757948097736", "legislature": "17", "identification": {"numeroLong": "AS29", "numeroOrdreDepot": "29", "prefixeOrganeExamen": "CION-SOC", "numeroRect": "0"}, "examenRef": "EXANR5L17PO420120B1229P0D1", "texteLegislatifRef": "PIONANR5L17B1229", "triAmendement": "baaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaavd", "cardinaliteAmdtMultiples": "1", "amendementParentRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "signataires": {"auteur": {"typeAuteur": "D\u00e9put\u00e9", "gouvernementRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "acteurRef": "PA794678", "groupePolitiqueRef": "PO845401", "auteurRapporteurOrganeRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, "cosignataires": {"acteurRef": ["PA794434", "PA841645", "PA840075", "PA642988", "PA794762", "PA842073", "PA840143", "PA795900", "PA793672", "PA794322", "PA793852", "PA793696", "PA795552", "PA793656", "PA793230"]}, "suffixe": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "libelle": "M.&#160;Frapp&#233;,  M.&#160;Bentz, M.&#160;Bernhardt, M.&#160;Casterman, M.&#160;de&#160;L&#233;pinau, Mme&#160;Dogor-Such, M.&#160;Dussausaye, M.&#160;Florquin, Mme&#160;Hamelet, Mme&#160;Loir, M.&#160;M&#233;nag&#233;, M.&#160;Meurin, M.&#160;Muller, M.&#160;Odoul, Mme&#160;Pollet et Mme&#160;Ranc"}, "pointeurFragmentTexte": {"partieAmendableRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "division": {"titre": "Article PREMIER", "articleDesignationCourte": "ART. PREMIER", "articleDesignation": "ARTICLE PREMIER", "type": "ARTICLE", "avant_A_Apres": "A", "divisionRattachee": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "articleAdditionnel": "false", "chapitreAdditionnel": "false", "urlDivisionTexteVise": "/17/textes/1229.asp#D_Article_1er"}, "amendementStandard": {"alinea": {"avant_A_Apres": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "numero": "7", "alineaDesignation": "Alin\u00e9a 7"}}}, "corps": {"cartoucheInformatif": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenuAuteur": {"dispositif": "<p style=\"text-align: justify;\">&#x00C0;&nbsp;l&#x2019;alin&#x00E9;a&nbsp;7, substituer aux mots&nbsp;:</p><p style=\"text-align: justify;\">&#x00AB;&nbsp;en mati&#x00E8;re de pr&#x00E9;vention et de secours civiques&nbsp;&#x00BB;</p><p style=\"text-align: justify;\">les mots&nbsp;:</p><p style=\"text-align: justify;\">&#x00AB;&nbsp;relative aux gestes de premiers secours&nbsp;&#x00BB;.</p>", "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p style=\"text-align: justify;\">Afin d&#x2019;harmoniser la r&#x00E9;daction de cette proposition de loi avec les &#x00E9;volutions r&#x00E9;centes en mati&#x00E8;re de formation aux premiers secours, il est propos&#x00E9; de remplacer l&#x2019;expression &#x00AB;&nbsp;aux premiers secours&nbsp;&#x00BB; par &#x00AB;&nbsp;gestes de premiers secours&nbsp;&#x00BB;, conform&#x00E9;ment &#x00E0; la terminologie utilis&#x00E9;e dans l&#x2019;objet du texte.</p><p style=\"text-align: justify;\">Depuis la publication de l&#x2019;arr&#x00EA;t&#x00E9; du&nbsp;15&nbsp;juin&nbsp;2024 relatif &#x00E0; la fili&#x00E8;re citoyenne de s&#x00E9;curit&#x00E9; civile, l&#x2019;Unit&#x00E9; d&#x2019;Enseignement &#x00AB;&nbsp;Pr&#x00E9;vention et Secours Civiques de niveau&nbsp;1&nbsp;&#x00BB; (PSC 1) est devenue l&#x2019;Unit&#x00E9; d&#x2019;Enseignement &#x00AB;&nbsp;Premiers Secours Citoyen&nbsp;&#x00BB; (PSC), traduisant une &#x00E9;volution vers une approche plus large et accessible de l&#x2019;apprentissage des gestes de premiers secours.</p><p style=\"text-align: justify;\">Par ailleurs, ces formations, qui ne donnent pas lieu &#x00E0; une &#x00E9;valuation certificative, ne permettent plus la d&#x00E9;livrance d&#x2019;un &#x00AB;&nbsp;certificat de comp&#x00E9;tences&nbsp;&#x00BB;. Il est donc propos&#x00E9; de substituer cette mention par celle d&#x2019;&#x00AB;&nbsp;attestation de comp&#x00E9;tences&nbsp;&#x00BB;, plus conforme aux nouvelles modalit&#x00E9;s de validation des acquis.</p><p style=\"text-align: justify;\">Ce travail a &#x00E9;t&#x00E9; men&#x00E9; en concertation avec PR&#x00C9;VIPOL ALLIANCE M&#x00C9;DITERRAN&#x00C9;E.</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2025-05-01", "datePublication": "2025-05-07", "soumisArticle40": "false", "etatDesTraitements": {"etat": {"code": "DI", "libelle": "Discut\u00e9"}, "sousEtat": {"code": "DI", "libelle": "Retir\u00e9"}}, "dateSort": "2025-05-07T15:53:02+02:00", "sort": "Retir\u00e9"}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO420120B1229P0D1N000029?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "article99": "false", "loiReference": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionCommune": {"idDiscussion": "30418", "typePosition": "Dernier"}, "discussionIdentique": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "accordGouvernementDepotHorsDelai": "Sans objet"}}