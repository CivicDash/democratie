"chapitreAdditionnel": "false", "urlDivisionTexteVise": "/17/textes/1281.asp#D_Article_14"}, "amendementStandard": {"alinea": {"avant_A_Apres": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "numero": "2", "alineaDesignation": "Alin\u00e9a 2"}}}, "corps": {"cartoucheInformatif": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenuAuteur": {"dispositif": "<p style=\"text-align: justify;\">Compl&#x00E9;ter l&#x2019;alin&#x00E9;a&nbsp;2 par la phrase suivante&nbsp;:</p><p style=\"text-align: justify;\">&#x00AB;&nbsp;Il informe le patient de la possibilit&#x00E9; de b&#x00E9;n&#x00E9;ficier d&#x2019;un accompagnement par des b&#x00E9;n&#x00E9;voles mentionn&#x00E9;s &#x00E0; l&#x2019;article&nbsp;L.&nbsp;1110&#x2011;11.&nbsp;&#x00BB;</p>", "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p style=\"text-align: justify;\">Le pr&#x00E9;sent amendement vise &#x00E0; renforcer l&#x2019;accompagnement des personnes atteintes d&#x2019;une affection grave en les informant de la possibilit&#x00E9; de b&#x00E9;n&#x00E9;ficier d&#x2019;un accompagnement par des b&#x00E9;n&#x00E9;voles, dans le cadre du plan personnalis&#x00E9; d&#x2019;accompagnement.</p><p style=\"text-align: justify;\">Cette information s&#x2019;av&#x00E8;re cruciale pour les patients en raison d&#x2019;une offre de soins palliatifs encore tr&#x00E8;s h&#x00E9;t&#x00E9;rog&#x00E8;ne sur le territoire. Aussi, l&#x2019;information de la possibilit&#x00E9; d&#x2019;intervention des b&#x00E9;n&#x00E9;voles dans le plan personnalis&#x00E9; d&#x2019;accompagnement permettra au patient, s&#x2019;il le souhaite, de b&#x00E9;n&#x00E9;ficier d&#x2019;une action compl&#x00E9;mentaire &#x00E0; sa prise en charge m&#x00E9;dicale qui aura pour vocation &#x00E0; conforter son environnement social et psychologique.</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2025-05-06", "datePublication": "2025-05-16", "soumisArticle40": "false", "etatDesTraitements": {"etat": {"code": "DI", "libelle": "Discut\u00e9"}, "sousEtat": {"code": "DI", "libelle": "Tomb\u00e9"}}, "dateSort": "2025-05-16T12:46:51+02:00", "sort": "Tomb\u00e9"}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO838901BTC1281P0D1N000359?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": "RUANR5L17S2025IDS29385", "article99": "false", "loiReference": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionCommune": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionIdentique": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "accordGouvernementDepotHorsDelai": "Sans objet"}}