{"amendement": {"@xmlns": "http://schemas.assemblee-nationale.fr/referentiel", "uid": "AMANR5L17PO419865B0856P0D1N000412", "chronotag": "1757947525433", "legislature": "17", "identification": {"numeroLong": "CD412", "numeroOrdreDepot": "412", "prefixeOrganeExamen": "CION-DVP", "numeroRect": "0"}, "examenRef": "EXANR5L17PO419865B0856P0D1", "texteLegislatifRef": "PIONANR5L17B0856", "triAmendement": "bcaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaapr", "cardinaliteAmdtMultiples": "1", "amendementParentRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "signataires": {"auteur": {"typeAuteur": "D\u00e9put\u00e9", "gouvernementRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "acteurRef": "PA795820", "groupePolitiqueRef": "PO845514", "auteurRapporteurOrganeRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, "cosignataires": {"acteurRef": ["PA795868", "PA720838", "PA794710", "PA796106", "PA721896", "PA795998", "PA774962", "PA335612", "PA796010", "PA842271", "PA793174", "PA721270", "PA795240", "PA795876", "PA605745", "PA842299"]}, "suffixe": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "libelle": "M.&#160;Nadeau,  M.&#160;Castor, Mme&#160;Bourouaha, M.&#160;Brugerolles, M.&#160;B&#233;nard, Mme&#160;Faucillon, Mme&#160;K/Bidi, Mme&#160;Lebon, M.&#160;Lecoq, M.&#160;Maillot, M.&#160;Maurel, M.&#160;Monnet, M.&#160;Peu, Mme&#160;Reid&#160;Arbelot, M.&#160;Rimane, M.&#160;Sansu et M.&#160;Tjibaou"}, "pointeurFragmentTexte": {"partieAmendableRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "division": {"titre": "Article 2", "articleDesignationCourte": "ART. 2", "articleDesignation": "ARTICLE 2", "type": "ARTICLE", "avant_A_Apres": "A", "divisionRattachee": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "articleAdditionnel": "false", "chapitreAdditionnel": "false", "urlDivisionTexteVise": "/17/textes/0856.asp#D_Article_2"}, "amendementStandard": {"alinea": {"avant_A_Apres": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "numero": "1", "alineaDesignation": "Alin\u00e9a 1"}}}, "corps": {"cartoucheInformatif": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenuAuteur": {"dispositif": "<p style=\"text-align: justify;\">Supprimer les alin&#x00E9;as 3 &#x00E0; 9.</p>", "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p style=\"text-align: justify;\">En pr&#x00E9;voyant que l&#x2019;Anses ait l&#x2019;obligation d&#x2019;informer ses tutelles de l&#x2019;ensemble des demandes d&#x2019;agr&#x00E9;ment ou d&#x2019;autorisation qu&#x2019;elle re&#x00E7;oit, et en amont de tout projet qu&#x2019;elle envisagerait ou de toute d&#x00E9;cision qu&#x2019;elle prendrait, le texte remet en cause de l&#x2019;ind&#x00E9;pendance de l&#x2019;Anses d&#x2019;autant plus nettement qu&#x2019;il souhaite lui indiquer d&#x00E9;sormais quels sont ses priorit&#x00E9;s. Le 13 mars dernier, 15 administrateurs de l&#x2019;Anses ont &#x00E0; ce titre&nbsp; vot&#x00E9; une motion en Conseil d&#x2019;administration s&#x2019;inqui&#x00E9;tant &#x00AB;&nbsp;des impacts particuli&#x00E8;rement graves sur l'ind&#x00E9;pendance de l'Anses et l'expertise scientifique&nbsp;&#x00BB; jugeant que &#x00AB; cette proposition de loi conduirait &#x00E0; placer sous tutelle de l&#x2019;&#x00C9;tat les d&#x00E9;cisions dont l'Anses assume la responsabilit&#x00E9; en mati&#x00E8;re d'&#x00E9;valuation et d'autorisation des produits phytopharmaceutiques, et instaurerait un droit de regard de l'&#x00C9;tat sur celles-ci&nbsp;&#x00BB;,</p><p style=\"text-align: justify;\">Rappelant que ce conseil d'orientation serait compos&#x00E9; de repr&#x00E9;sentants de l'&#x00C9;tat, mais aussi d&#x2019;organisations repr&#x00E9;sentatives de la production agricole et de l'industrie phytopharmaceutique, les administrateurs d&#x00E9;ploraient une &#x00E9;volution qui &#x00AB;&nbsp;constituerait une remise en cause grave de la gouvernance de l'Anses et de sa n&#x00E9;cessaire ind&#x00E9;pendance&nbsp;&#x00BB;. Ce qui &#x00AB;&nbsp;conduirait &#x00E0; placer l'&#x00E9;valuation scientifique sous influence et donnerait libre cours &#x00E0; des conflits d'int&#x00E9;r&#x00EA;ts&nbsp;&#x00BB; et est&nbsp;contraire aux r&#x00E8;gles d&#x00E9;ontologiques de l'agence et aux principes de la sant&#x00E9; publique.</p><p style=\"text-align: justify;\">Partageant ces pr&#x00E9;occupations, les auteurs du pr&#x00E9;sent amendement proposent la suppression des alin&#x00E9;as 3 &#x00E0; 9.</p><p><br>&nbsp;</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2025-05-02", "datePublication": "2025-05-07", "soumisArticle40": "false", "etatDesTraitements": {"etat": {"code": "DI", "libelle": "Discut\u00e9"}, "sousEtat": {"code": "DI", "libelle": "Tomb\u00e9"}}, "dateSort": "2025-05-07T10:58:05+02:00", "sort": "Tomb\u00e9"}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO419865B0856P0D1N000412?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "article99": "false", "loiReference": {"codeLoi": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "divisionCodeLoi": "s3-9"}, "discussionCommune": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionIdentique": {"idDiscussion": "78250", "typePosition": "Dernier"}, "accordGouvernementDepotHorsDelai": "Sans objet"}}