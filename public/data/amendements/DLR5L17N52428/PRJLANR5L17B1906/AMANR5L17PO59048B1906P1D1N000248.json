{"amendement": {"@xmlns": "http://schemas.assemblee-nationale.fr/referentiel", "uid": "AMANR5L17PO59048B1906P1D1N000248", "chronotag": "1760998033283", "legislature": "17", "identification": {"numeroLong": "I-CF248", "numeroOrdreDepot": "248", "prefixeOrganeExamen": "CION_FIN", "numeroRect": "0"}, "examenRef": "EXANR5L17PO59048B1906P1D1", "texteLegislatifRef": "PRJLANR5L17B1906", "triAmendement": "awaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaafbi", "cardinaliteAmdtMultiples": "1", "amendementParentRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "signataires": {"auteur": {"typeAuteur": "D\u00e9put\u00e9", "gouvernementRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "acteurRef": "PA840979", "groupePolitiqueRef": "PO845425", "auteurRapporteurOrganeRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, "cosignataires": {"acteurRef": ["PA722390", "PA266793", "PA642725", "PA721442", "PA718838", "PA718850", "PA719968", "PA330008", "PA721816"]}, "suffixe": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "libelle": "M.&#160;Le&#160;Fur,  Mme&#160;Corneloup, M.&#160;Bony, M.&#160;Li&#233;geon, Mme&#160;Petex, M.&#160;Fabrice&#160;Brun, M.&#160;Cordier, Mme&#160;Sylvie&#160;Bonnet, M.&#160;Breton et M.&#160;Boucard"}, "pointeurFragmentTexte": {"partieAmendableRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "division": {"titre": "ARTICLE 5", "articleDesignationCourte": "ART. 5", "articleDesignation": "ARTICLE 5", "type": "ARTICLE", "avant_A_Apres": "A", "divisionRattachee": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "articleAdditionnel": "false", "chapitreAdditionnel": "false", "urlDivisionTexteVise": "/17/textes/1906A.asp#D_ARTICLE_5"}, "amendementStandard": {"alinea": {"avant_A_Apres": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "numero": "15", "alineaDesignation": "Alin\u00e9a 15"}}}, "corps": {"cartoucheInformatif": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenuAuteur": {"dispositif": "<p style=\"text-align: justify;\">I.&nbsp;&#x2013;&nbsp;Supprimer l&#x2019;alin&#x00E9;a&nbsp;15.</p><p style=\"text-align: justify;\">II.&nbsp;&#x2013;&nbsp;&#x00C0; l&#x2019;alin&#x00E9;a&nbsp;17, substituer aux mots&nbsp;:&nbsp;</p><p style=\"text-align: justify;\">&#x00AB;&nbsp;les r&#x00E9;f&#x00E9;rences&nbsp;: &#x00AB;&nbsp;199&nbsp;<i>quater</i> F,&nbsp;&#x00BB; et &#x00AB;&nbsp;199&nbsp;<i>vicies</i> A,&nbsp;&#x00BB; sont supprim&#x00E9;es&nbsp;&#x00BB;&nbsp;</p><p style=\"text-align: justify;\">les mots&nbsp;:&nbsp;</p><p style=\"text-align: justify;\">&#x00AB;&nbsp;la r&#x00E9;f&#x00E9;rence&nbsp;: &#x00AB;&nbsp;199&nbsp;<i>quater</i> F&nbsp;&#x00BB; est supprim&#x00E9;e.&nbsp;&#x00BB;</p>", "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p style=\"text-align: justify;\"><b>Le pr&#x00E9;sent amendement vise &#x00E0; supprimer la disposition supprimant la r&#x00E9;duction d&#x2019;imp&#x00F4;t pour frais de scolarit&#x00E9; dans l&#x2019;enseignement secondaire et sup&#x00E9;rieur.</b></p><p style=\"text-align: justify;\">Cette r&#x00E9;duction d&#x2019;imp&#x00F4;t, d&#x2019;un montant de 61&nbsp;euros pour un coll&#x00E9;gien, 153&nbsp;euros pour un lyc&#x00E9;en et 183&nbsp;euros pour un &#x00E9;tudiant, concerne plusieurs millions de foyers fiscaux. Elle constitue un instrument de redistribution horizontale, reconnaissant l&#x2019;effort consenti par les familles pour la scolarit&#x00E9; de leurs enfants.</p><p style=\"text-align: justify;\">Sa suppression affaiblirait la politique familiale et enverrait un signal n&#x00E9;gatif aux m&#x00E9;nages, alors que le co&#x00FB;t de la vie &#x00E9;tudiante et de la scolarit&#x00E9; continue d&#x2019;augmenter.</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2025-10-17", "datePublication": "2025-10-20", "soumisArticle40": "false", "etatDesTraitements": {"etat": {"code": "DI", "libelle": "Discut\u00e9"}, "sousEtat": {"code": "DI", "libelle": "Adopt\u00e9"}}, "dateSort": "2025-10-21T00:07:04+02:00", "sort": "Adopt\u00e9"}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO59048B1906P1D1N000248?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "article99": "false", "loiReference": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionCommune": {"idDiscussion": "32431", "typePosition": "Milieu"}, "discussionIdentique": {"idDiscussion": "81747", "typePosition": "Premier"}, "accordGouvernementDepotHorsDelai": "Sans objet"}}