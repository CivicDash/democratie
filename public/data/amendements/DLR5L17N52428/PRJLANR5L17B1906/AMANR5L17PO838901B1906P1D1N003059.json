pointeurFragmentTexte": {"partieAmendableRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "division": {"titre": "ARTICLE 27", "articleDesignationCourte": "APR\u00c8S ART. 27", "articleDesignation": "APR\u00c8S L'ARTICLE 27, ins\u00e9rer l'article suivant:", "type": "ARTICLE", "avant_A_Apres": "Apr\u00e8s", "divisionRattachee": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "articleAdditionnel": "true", "chapitreAdditionnel": "false", "urlDivisionTexteVise": "/17/textes/1906A.asp#D_ARTICLE_27"}, "amendementStandard": {"alinea": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "corps": {"cartoucheInformatif": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenuAuteur": {"dispositif": "<p style=\"text-align: justify;\">Le chapitre premier du titre premier de la deuxi&#x00E8;me partie du livre premier du code g&#x00E9;n&#x00E9;ral des imp&#x00F4;ts est ainsi modifi&#x00E9;&nbsp;:</p><p style=\"text-align: justify;\">1&#x00B0;&nbsp;Le 15&#x00B0; de l&#x2019;article&nbsp;1382 est abrog&#x00E9;&nbsp;;</p><p style=\"text-align: justify;\">2&#x00B0;&nbsp;Au premier alin&#x00E9;a de l&#x2019;article&nbsp;1467, les mots&nbsp;:&nbsp;&#x00AB;&nbsp;,&nbsp;13&#x00B0; et 15&#x00B0;&nbsp;&#x00BB; sont remplac&#x00E9;s par les mots&nbsp;: &#x00AB;&nbsp;et 13&#x00B0;&nbsp;&#x00BB;.</p>", "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p>Cet amendement vise &#x00E0; mettre fin &#x00E0; l'exon&#x00E9;ration&nbsp;de taxe fonci&#x00E8;re sur les propri&#x00E9;t&#x00E9;s b&#x00E2;ties pour les&nbsp;m&#x00E2;ts des &#x00E9;oliennes. En effet, les &#x00E9;oliennes repr&#x00E9;sentent moins de 15% de notre production d'&#x00E9;lectricit&#x00E9; mais contribuent &#x00E0; la destruction des paysages, des sols et de la biodiversit&#x00E9;.&nbsp;</p><p>Consid&#x00E9;rant, leur faible rentabilit&#x00E9;, la maturit&#x00E9; financi&#x00E8;re du secteur et leur impact cons&#x00E9;quent sur la vie local, il est de bon sens que les &#x00E9;oliennes soient soumises &#x00E0; la taxe fonci&#x00E8;re qui b&#x00E9;n&#x00E9;ficie directement aux communes et aux EPCI. Cette disposition se fait dans un souci de justice vis &#x00E0; vis des populations locales&nbsp;qui subissent ces m&#x00E2;ts de ferraille.&nbsp;</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2025-10-22", "datePublication": "2025-10-26", "soumisArticle40": "true", "etatDesTraitements": {"etat": {"code": "AC", "libelle": "A discuter"}, "sousEtat": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, "dateSort": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "sort": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO838901B1906P1D1N003059?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "article99": "false", "loiReference": {"codeLoi": "CGI", "divisionCodeLoi": "1382"}, "discussionCommune": {"idDiscussion": "34963", "typePosition": "Milieu"}, "discussionIdentique": {"idDiscussion": "83293", "typePosition": "Dernier"}, "accordGouvernementDepotHorsDelai": "Sans objet"}}