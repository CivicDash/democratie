tif": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenuAuteur": {"dispositifAmdtCreditPLF": {"listeProgrammes": {"programme": [{"libelle": "Infrastructures et services de transports", "programmeRef": "602843", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Affaires maritimes, p\u00eache et aquaculture", "programmeRef": "602845", "autorisationEngagement": "90000000", "creditPaiement": "90000000", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Paysages, eau et biodiversit\u00e9", "programmeRef": "602847", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Expertise, information g\u00e9ographique et m\u00e9t\u00e9orologie", "programmeRef": "602849", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Pr\u00e9vention des risques", "programmeRef": "602851", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "\u00c9nergie, climat et apr\u00e8s-mines", "programmeRef": "602853", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Service public de l'\u00e9nergie", "programmeRef": "602855", "autorisationEngagement": "-90000000", "creditPaiement": "-90000000", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Conduite et pilotage des politiques de l'\u00e9cologie, du d\u00e9veloppement et de la mobilit\u00e9 durables", "programmeRef": "602857", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Fonds d'acc\u00e9l\u00e9ration de la transition \u00e9cologique dans les territoires", "programmeRef": "602859", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "S\u00fbret\u00e9 nucl\u00e9aire et radioprotection", "programmeRef": "602861", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Ecologie \u2013 mise en extinction du plan de relance", "programmeRef": "602863", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}]}, "soldeAE": "0", "soldeCP": "0", "cpEgalAe": "true"}, "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p style=\"text-align: justify;\">Cet amendement du groupe Socialistes et apparent&#x00E9;s propose de fl&#x00E9;cher une fraction de la taxe carbone vers la d&#x00E9;carbonation maritime afin de r&#x00E9;pondre &#x00E0; la promesse du Premier Ministre Fran&#x00E7;ois Bayrou, lors du Comit&#x00E9; Interminist&#x00E9;riel de la Mer (CIMER), le 26&nbsp;mai dernier, de fl&#x00E9;cher une partie des revenus g&#x00E9;n&#x00E9;r&#x00E9;s par le produit de l&#x2019;ETS maritime, ainsi que les &#x00E9;ventuelles p&#x00E9;nalit&#x00E9;s applicables dans le dispositif FuelEU, &#x00E0; savoir 90 millions d&#x2019;euros de la taxe carbone europ&#x00E9;enne (taxe ETS2) vers la d&#x00E9;carbonation du secteur maritime afin de permettre &#x00E0; la France d&#x2019;atteindre l&#x2019;objectif z&#x00E9;ro &#x00E9;mission &#x00E0; horizon 2050 fix&#x00E9; par l&#x2019;OMI.</p><p style=\"text-align: justify;\">Cet amendement vise &#x00E9;galement &#x00E0; cr&#x00E9;er enfin le fonds d&#x2019;investissement d&#x00E9;di&#x00E9; au secteur de la d&#x00E9;carbonation maritime, annonc&#x00E9; par le Pr&#x00E9;sident de la R&#x00E9;publique, lors des Assises de l&#x2019;&#x00E9;conomie de la mer du&nbsp;28&nbsp;novembre&nbsp;2022, et ce, afin de rassurer tant les entreprises du secteur que notre souverainet&#x00E9; industrielle.</p><p style=\"text-align: justify;\">Cet amendement propose donc d&#x2019;abonder le programme 205 &#x00AB;&nbsp;Affaires maritimes, p&#x00EA;che et aquaculture&nbsp;&#x00BB; afin de cr&#x00E9;er un fonds de soutien au d&#x00E9;veloppement des technologies li&#x00E9;es &#x00E0; la d&#x00E9;carbonation du transport maritime.</p><p style=\"text-align: justify;\">Afin d&#x2019;assurer la recevabilit&#x00E9; de cet amendement, ce dernier&nbsp;:</p><p style=\"text-align: justify;\">&#x2013;&nbsp;ponctionne 90 millions d&#x2019;euros (en AE et CP) du programme 345 &#x00AB;&nbsp;Service public de l&#x2019;&#x00E9;nergie&nbsp;&#x00BB;&nbsp;;</p><p style=\"text-align: justify;\">&#x2013;&nbsp;afin d&#x2019;abonder du m&#x00EA;me montant (en AE et CP) le programme 205 &#x00AB;&nbsp;Affaires maritimes, p&#x00EA;che et aquaculture&nbsp;&#x00BB;</p><p style=\"text-align: justify;\">Notre volont&#x00E9; n&#x2019;est pas de r&#x00E9;duire les cr&#x00E9;dits du programme 345 &#x00AB;&nbsp;Service public de l&#x2019;&#x00E9;nergie&nbsp;&#x00BB;, c&#x2019;est la raison pour laquelle nous demandons au Gouvernement de lever le gage.</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2025-10-29", "datePublication": "2025-11-11", "soumisArticle40": "false", "etatDesTraitements": {"etat": {"code": "DI", "libelle": "Discut\u00e9"}, "sousEtat": {"code": "DI", "libelle": "Tomb\u00e9"}}, "dateSort": "2025-11-12T21:17:40+01:00", "sort": "Tomb\u00e9"}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO59048B1906P2D1N000482?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "article99": "false", "loiReference": {"codeLoi": "2", "divisionCodeLoi": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, "discussionCommune": {"idDiscussion": "34797", "typePosition": "Milieu"}, "discussionIdentique": {"idDiscussion": "84691", "typePosition": "Premier"}, "accordGouvernementDepotHorsDelai": "Sans objet"}}