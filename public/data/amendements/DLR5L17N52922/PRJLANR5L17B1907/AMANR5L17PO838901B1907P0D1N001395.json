{"amendement": {"@xmlns": "http://schemas.assemblee-nationale.fr/referentiel", "uid": "AMANR5L17PO838901B1907P0D1N001395", "chronotag": "1762722015586", "legislature": "17", "identification": {"numeroLong": "1395", "numeroOrdreDepot": "1395", "prefixeOrganeExamen": "AN", "numeroRect": "0"}, "examenRef": "EXANR5L17PO838901B1907P0D1", "texteLegislatifRef": "PRJLANR5L17B1907", "triAmendement": "goaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaadqy", "cardinaliteAmdtMultiples": "1", "amendementParentRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "signataires": {"auteur": {"typeAuteur": "D\u00e9put\u00e9", "gouvernementRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "acteurRef": "PA719286", "groupePolitiqueRef": "PO845485", "auteurRapporteurOrganeRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, "cosignataires": {"acteurRef": ["PA721474", "PA719138", "PA794554", "PA267042", "PA1592", "PA795244", "PA720976", "PA607619", "PA796078", "PA720960", "PA793796"]}, "suffixe": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "libelle": "M.&#160;Colombani,  M.&#160;Viry, M.&#160;Castellani, M.&#160;Castiglione, M.&#160;Favennec-B&#233;cot, M.&#160;Habib, M.&#160;Lenormand, M.&#160;Mathiasin, M.&#160;Molac, Mme&#160;Youssouffa, M.&#160;Serva et M.&#160;Taupiac"}, "pointeurFragmentTexte": {"partieAmendableRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "division": {"titre": "Article 28", "articleDesignationCourte": "ART. 28", "articleDesignation": "ARTICLE 28", "type": "ARTICLE", "avant_A_Apres": "A", "divisionRattachee": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "articleAdditionnel": "false", "chapitreAdditionnel": "false", "urlDivisionTexteVise": "/17/textes/1907.asp#D_Article_28"}, "amendementStandard": {"alinea": {"avant_A_Apres": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "numero": "18", "alineaDesignation": "Alin\u00e9a 18"}}}, "corps": {"cartoucheInformatif": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenuAuteur": {"dispositif": "<p>Supprimer les alin&#x00E9;as 18 &#x00E0; 21.&nbsp;<br>&nbsp;<br><br><br></p>", "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p style=\"text-align: justify;\">Ces dispositions modifient l&#x2019;article&nbsp;L.&nbsp;433&#x2011;1 du code de la s&#x00E9;curit&#x00E9; sociale en fixant par d&#x00E9;cret une dur&#x00E9;e maximale de versement des indemnit&#x00E9;s journali&#x00E8;res pour les victimes d&#x2019;accidents du travail.</p><p style=\"text-align: justify;\">Une telle limitation rompt avec le principe de r&#x00E9;paration int&#x00E9;grale qui fonde ce r&#x00E9;gime. Elle risque de priver certains assur&#x00E9;s d&#x2019;une indemnisation compl&#x00E8;te alors m&#x00EA;me que leur &#x00E9;tat de sant&#x00E9; ne permet pas une reprise ou une consolidation.</p><p style=\"text-align: justify;\">Le dispositif actuel, centr&#x00E9; sur la reconnaissance m&#x00E9;dicale de la consolidation ou de la gu&#x00E9;rison, garantit l&#x2019;&#x00E9;quit&#x00E9; et la s&#x00E9;curit&#x00E9; juridique du syst&#x00E8;me. En fixant une dur&#x00E9;e arbitraire, le texte introduirait une in&#x00E9;galit&#x00E9; entre victimes selon la gravit&#x00E9; de leur atteinte ou la complexit&#x00E9; de leur prise en charge.</p><p style=\"text-align: justify;\">Cet amendement vise donc &#x00E0; pr&#x00E9;server l&#x2019;esprit protecteur du r&#x00E9;gime des accidents du travail et des maladies professionnelles, en maintenant la couverture jusqu&#x2019;&#x00E0; la v&#x00E9;ritable consolidation m&#x00E9;dicale.</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2025-10-31", "datePublication": "2025-11-08", "soumisArticle40": "true", "etatDesTraitements": {"etat": {"code": "DI", "libelle": "Discut\u00e9"}, "sousEtat": {"code": "DI", "libelle": "Tomb\u00e9"}}, "dateSort": "2025-11-09T21:57:25+01:00", "sort": "Tomb\u00e9"}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO838901B1907P0D1N001395?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": "RUANR5L17S2026IDS29959", "article99": "false", "loiReference": {"codeLoi": "0", "divisionCodeLoi": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, "discussionCommune": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionIdentique": {"idDiscussion": "84187", "typePosition": "Milieu"}, "accordGouvernementDepotHorsDelai": "Sans objet"}}