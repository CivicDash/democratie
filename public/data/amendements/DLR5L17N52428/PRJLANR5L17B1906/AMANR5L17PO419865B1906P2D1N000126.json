rogramme": [{"libelle": "Infrastructures et services de transports", "programmeRef": "574533", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Affaires maritimes, p\u00eache et aquaculture", "programmeRef": "574535", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Paysages, eau et biodiversit\u00e9", "programmeRef": "574537", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Expertise, information g\u00e9ographique et m\u00e9t\u00e9orologie", "programmeRef": "574539", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Pr\u00e9vention des risques", "programmeRef": "574541", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "\u00c9nergie, climat et apr\u00e8s-mines", "programmeRef": "574543", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Service public de l'\u00e9nergie", "programmeRef": "574545", "autorisationEngagement": "-370000000", "creditPaiement": "-370000000", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Conduite et pilotage des politiques de l'\u00e9cologie, du d\u00e9veloppement et de la mobilit\u00e9 durables", "programmeRef": "574547", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Fonds d'acc\u00e9l\u00e9ration de la transition \u00e9cologique dans les territoires", "programmeRef": "574549", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "S\u00fbret\u00e9 nucl\u00e9aire et radioprotection", "programmeRef": "574551", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Ecologie \u2013 mise en extinction du plan de relance", "programmeRef": "574553", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Leasing social", "programmeRef": "574555", "autorisationEngagement": "370000000", "creditPaiement": "370000000", "action": "cr\u00e9ation", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}]}, "soldeAE": "0", "soldeCP": "0", "cpEgalAe": "true"}, "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p>Cet amendement vise &#x00E0; cr&#x00E9;er un programme d&#x00E9;di&#x00E9; au leasing social afin d&#x2019;identifier clairement les cr&#x00E9;dits consacr&#x00E9;s &#x00E0; ce dispositif.</p><p><br>Dans le cadre de la loi de finances pour 2025, le leasing social &#x00E9;tait financ&#x00E9; par l&#x2019;action &#x201C;Aides &#x00E0; l'acquisition de v&#x00E9;hicules propres&#x201D; du programme 174. Il est d&#x00E9;sormais financ&#x00E9; dans le cadre d&#x2019;un programme de certificats d&#x2019;&#x00E9;conomie d&#x2019;&#x00E9;nergie (CEE) dot&#x00E9; d&#x2019;une enveloppe de 370 M&#x20AC;.</p><p><br>Alors qu&#x2019;il repr&#x00E9;sente un levier prioritaire de la transition vers des mobilit&#x00E9;s plus durables et qu&#x2019;il mobilise des montants significatifs, les cr&#x00E9;dits consacr&#x00E9;s au leasing social ne font plus l&#x2019;objet d&#x2019;un examen au Parlement, ni d&#x2019;un bilan annuel permettant l&#x2019;&#x00E9;valuation de l&#x2019;efficacit&#x00E9; du dispositif.</p><p><br>La transition des mobilit&#x00E9;s doit reposer sur un soutien cibl&#x00E9; aux m&#x00E9;nages prioritaires et sur un conditionnement &#x00E0; des crit&#x00E8;res &#x00E9;cologiques ambitieux (poids du v&#x00E9;hicule, sobri&#x00E9;t&#x00E9; &#x00E9;nerg&#x00E9;tique).</p><p><br>Cet amendement vise donc &#x00E0; r&#x00E9;inscrire le dispositif du leasing social au sein de la mission &#x00C9;cologie, d&#x00E9;veloppement et mobilit&#x00E9; durables, avec une enveloppe de 370 M&#x20AC; correspondant au montant pr&#x00E9;vu dans le cadre des CEE.</p><p><br>Nous appelons le Gouvernement &#x00E0; lever le gage.</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2025-10-24", "datePublication": "2025-10-28", "soumisArticle40": "true", "etatDesTraitements": {"etat": {"code": "DI", "libelle": "Discut\u00e9"}, "sousEtat": {"code": "DI", "libelle": "Rejet\u00e9"}}, "dateSort": "2025-10-29T15:47:58+01:00", "sort": "Rejet\u00e9"}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO419865B1906P2D1N000126?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "article99": "false", "loiReference": {"codeLoi": "174", "divisionCodeLoi": "121"}, "discussionCommune": {"idDiscussion": "33343", "typePosition": "Dernier"}, "discussionIdentique": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "accordGouvernementDepotHorsDelai": "Sans objet"}}