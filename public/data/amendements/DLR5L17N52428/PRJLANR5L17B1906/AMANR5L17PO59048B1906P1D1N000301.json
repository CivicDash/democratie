{"amendement": {"@xmlns": "http://schemas.assemblee-nationale.fr/referentiel", "uid": "AMANR5L17PO59048B1906P1D1N000301", "chronotag": "1761128263642", "legislature": "17", "identification": {"numeroLong": "I-CF301", "numeroOrdreDepot": "301", "prefixeOrganeExamen": "CION_FIN", "numeroRect": "0"}, "examenRef": "EXANR5L17PO59048B1906P1D1", "texteLegislatifRef": "PRJLANR5L17B1906", "triAmendement": "efaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaabwc", "cardinaliteAmdtMultiples": "1", "amendementParentRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "signataires": {"auteur": {"typeAuteur": "D\u00e9put\u00e9", "gouvernementRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "acteurRef": "PA794486", "groupePolitiqueRef": "PO845407", "auteurRapporteurOrganeRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, "cosignataires": {"acteurRef": ["PA719512", "PA605694", "PA719024", "PA840235"]}, "suffixe": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "libelle": "Mme&#160;Spillebout,  Mme&#160;Vignon, M.&#160;Falorni, M.&#160;Blanchet et M.&#160;Fr&#233;bault"}, "pointeurFragmentTexte": {"partieAmendableRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "division": {"titre": "ARTICLE 22", "articleDesignationCourte": "ART. 22", "articleDesignation": "ARTICLE 22", "type": "ARTICLE", "avant_A_Apres": "A", "divisionRattachee": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "articleAdditionnel": "false", "chapitreAdditionnel": "false", "urlDivisionTexteVise": "/17/textes/1906A.asp#D_ARTICLE_22"}, "amendementStandard": {"alinea": {"avant_A_Apres": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "numero": "10", "alineaDesignation": "Alin\u00e9a 10"}}}, "corps": {"cartoucheInformatif": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenuAuteur": {"dispositif": "<p style=\"text-align: justify;\">&#x00C0;&nbsp;l&#x2019;alin&#x00E9;a&nbsp;10, substituer au montant&nbsp;:&nbsp;</p><p style=\"text-align: justify;\">&#x00AB;&nbsp;2&nbsp;euros&nbsp;&#x00BB;&nbsp;</p><p style=\"text-align: justify;\">le montant&nbsp;:</p><p style=\"text-align: justify;\">&#x00AB;&nbsp;25&nbsp;euros&nbsp;&#x00BB;.&nbsp;</p>", "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p style=\"text-align: justify;\">Le pr&#x00E9;sent amendement, vise &#x00E0; porter de 2&nbsp;euros &#x00E0; 25&nbsp;euros la taxe sur les petits colis en provenance de pays tiers.</p><p style=\"text-align: justify;\">Fix&#x00E9; &#x00E0; un niveau symbolique, le montant initial ne permettra pas d&#x2019;atteindre les objectifs poursuivis par le Gouvernement&nbsp;: mieux encadrer le e-commerce en provenance de pays tiers, lutter contre l&#x2019;ultra fast fashion et garantir&nbsp;une concurrence &#x00E9;quitable avec nos industries textiles fran&#x00E7;aises.</p><p style=\"text-align: justify;\">Cela contribuerait &#x00E0; prot&#x00E9;ger davantage l&#x2019;industrie textile fran&#x00E7;aise, particuli&#x00E8;rement implant&#x00E9;e dans le Nord, o&#x00F9; des entreprises&nbsp;du textile incarnent un savoir-faire industriel, social et responsable qu&#x2019;il est essentiel de pr&#x00E9;server face &#x00E0; la concurrence d&#x00E9;loyale des plateformes &#x00E9;trang&#x00E8;res.</p><p style=\"text-align: justify;\">Porter le montant &#x00E0; 25&nbsp;euros donnerait &#x00E0; ce dispositif une port&#x00E9;e r&#x00E9;ellement dissuasive &#x00E0; l&#x2019;&#x00E9;gard des plateformes &#x00E9;trang&#x00E8;res qui inondent le march&#x00E9; fran&#x00E7;ais de produits &#x00E0; bas co&#x00FB;t, fabriqu&#x00E9;s dans des conditions sociales et environnementales non-&#x00E9;thiques, et souvent non conformes aux normes europ&#x00E9;ennes.</p><p style=\"text-align: justify;\">Cet amendement a &#x00E9;t&#x00E9; travaill&#x00E9; en concertation avec l&#x2019;entreprise Kiabi.&nbsp;</p><p style=\"text-align: justify;\">Tel est l&#x2019;objet du pr&#x00E9;sent amendement&nbsp;</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2025-10-17", "datePublication": "2025-10-21", "soumisArticle40": "false", "etatDesTraitements": {"etat": {"code": "DI", "libelle": "Discut\u00e9"}, "sousEtat": {"code": "DI", "libelle": "Tomb\u00e9"}}, "dateSort": "2025-10-22T12:17:22+02:00", "sort": "Tomb\u00e9"}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO59048B1906P1D1N000301?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "article99": "false", "loiReference": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionCommune": {"idDiscussion": "32519", "typePosition": "Milieu"}, "discussionIdentique": {"idDiscussion": "81409", "typePosition": "Premier"}, "accordGouvernementDepotHorsDelai": "Sans objet"}}