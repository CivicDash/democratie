"corps": {"cartoucheInformatif": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenuAuteur": {"dispositif": "<p style=\"text-align: justify;\">I.&nbsp;&#x2013;&nbsp;Le 1&#x00B0; de l&#x2019;article&nbsp;965 du code g&#x00E9;n&#x00E9;ral des imp&#x00F4;ts est compl&#x00E9;t&#x00E9; par les deux phrases suivantes&nbsp;:&nbsp;&#x00AB;&nbsp;Sont exclus de l&#x2019;assiette les logements et droits immobiliers relatifs &#x00E0; ces logements, lou&#x00E9;s au titre de la r&#x00E9;sidence principale par des personnes physiques dont les ressources, appr&#x00E9;ci&#x00E9;es &#x00E0; la date de conclusion du bail, n&#x2019;exc&#x00E8;dent pas les plafonds mentionn&#x00E9;s au premier alin&#x00E9;a du&nbsp;III de l&#x2019;article&nbsp;199&nbsp;<i>novovicies</i> et dont le loyer mensuel n&#x2019;exc&#x00E8;de pas les plafonds mentionn&#x00E9;s au m&#x00EA;me III. Le logement doit avoir &#x00E9;t&#x00E9; lou&#x00E9; au moins 8 mois au cours de la p&#x00E9;riode servant &#x00E0; d&#x00E9;terminer l&#x2019;assiette de l&#x2019;imp&#x00F4;t sur la fortune immobili&#x00E8;re.&nbsp;&#x00BB;</p><p style=\"text-align: justify;\">II.&nbsp;&#x2013;&nbsp;La perte de recettes pour l&#x2019;&#x00C9;tat est compens&#x00E9;e &#x00E0; due concurrence par la cr&#x00E9;ation d&#x2019;une taxe additionnelle &#x00E0; l&#x2019;accise sur les tabacs pr&#x00E9;vue au chapitre&nbsp;IV du titre&nbsp;I<sup>er</sup> du livre&nbsp;III du code des impositions sur les biens et services.</p>", "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p>Cet amendement vise &#x00E0; encourager les m&#x00E9;nages ais&#x00E9;s de mettre en location des biens en sortant de l&#x2019;assiette de l&#x2019;IFI les logements qui seraient lou&#x00E9;s sous conditions de loyer et de ressources.</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2025-10-17", "datePublication": "2025-10-20", "soumisArticle40": "false", "etatDesTraitements": {"etat": {"code": "DI", "libelle": "Discut\u00e9"}, "sousEtat": {"code": "DI", "libelle": "Rejet\u00e9"}}, "dateSort": "2025-10-20T22:14:11+02:00", "sort": "Rejet\u00e9"}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO59048B1906P1D1N000571?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "article99": "false", "loiReference": {"codeLoi": "CGI", "divisionCodeLoi": "965"}, "discussionCommune": {"idDiscussion": "32373", "typePosition": "Milieu"}, "discussionIdentique": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "accordGouvernementDepotHorsDelai": "Sans objet"}}