ionnel": "false", "urlDivisionTexteVise": "/17/textes/1906C.asp#D_Etat_D__Repartition_des_credits_pour_2"}, "missionVisee": {"codeEtat": "D", "codeMissionMinefi": "ZD", "libelleMission": "Avances \u00e0 l'audiovisuel public", "missionRef": "3393"}}, "corps": {"cartoucheInformatif": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenuAuteur": {"dispositifAmdtCreditPLF": {"listeProgrammes": {"programme": [{"libelle": "France T\u00e9l\u00e9visions", "programmeRef": "584813", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "ARTE France", "programmeRef": "584815", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Radio France", "programmeRef": "584817", "autorisationEngagement": "-28000000", "creditPaiement": "-28000000", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "France M\u00e9dias Monde", "programmeRef": "584819", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Institut national de l'audiovisuel", "programmeRef": "584821", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "TV5 Monde", "programmeRef": "584823", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Programme de transformation", "programmeRef": "584825", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}]}, "soldeAE": "-28000000", "soldeCP": "-28000000", "cpEgalAe": "true"}, "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p style=\"text-align: justify;\">Le pr&#x00E9;sent amendement pr&#x00E9;voit de minorer les cr&#x00E9;dits, en autorisations d&#x2019;engagement et en cr&#x00E9;dits de paiement, d&#x2019;un montant de&nbsp;28&nbsp;000&nbsp;000&nbsp;d&#x2019;euros pour l&#x2019;action n&#x00B0;&nbsp;1 &#x00AB;&nbsp;Radio France&nbsp;&#x00BB; du programme n&#x00B0; 843 &#x00AB;&nbsp;Radio France&nbsp;&#x00BB;.&nbsp;Ce montant repr&#x00E9;sentant le d&#x00E9;passement estim&#x00E9; des recettes publicitaires&nbsp;de Radio France pour&nbsp;l&#x2019;ann&#x00E9;e 2025.</p><p style=\"text-align: justify;\">Si les COM 2024&#x2011;2028 pr&#x00E9;cisent que&nbsp;les recettes publicitaires de Radio France sont plafonn&#x00E9;es &#x00E0; 42 millions d&#x2019;euros par an, comprenant les recettes des publicit&#x00E9;s commerciales et les parrainages et &#x00AB;&nbsp;qu&#x2019;en&nbsp;cas de non-respect par la soci&#x00E9;t&#x00E9; de ce plafond, le Gouvernement en tire les cons&#x00E9;quences&nbsp;&#x00BB;,&nbsp;Radio France&nbsp;continue chaque ann&#x00E9;e d&#x2019;effectuer un d&#x00E9;passement de ce plafonnement en profitant d&#x2019;un COM ne prenant pas en compte les recettes publicitaires digitales.&nbsp;</p><p style=\"text-align: justify;\">Dans son rapport publi&#x00E9; en janvier&nbsp;2025, la Cour des comptes note par exemple qu&#x2019;en 2023, celles-ci s&#x2019;&#x00E9;levaient &#x00E0; pr&#x00E8;s de 70 millions d&#x2019;euros. En effet pour la Cour &#x00AB;&nbsp;si&nbsp;les recettes relevant du secteur concurrentiel sont limit&#x00E9;es &#x00E0; 42 M&#x20AC; par le COM, celles issues du digital &#x00E9;chappent &#x00E0; cette contrainte&nbsp;&#x00BB;. Enfin dans son rapport pr&#x00E9;sent&#x00E9; en avril&nbsp;2025 concernant ses comptes 2024, Radio France annonce des recettes publicitaires sensiblement proches &#x00E0; pr&#x00E8;s de 66,5 millions d&#x2019;euros.&nbsp;</p><p style=\"text-align: justify;\">Il est&nbsp;indispensable que Radio France respecte ce plafonnement publicitaire en int&#x00E9;grant &#x00E9;galement le digital et le parrainage afin de pallier aux asym&#x00E9;tries publicitaires qui existent entre Radio France et les acteurs priv&#x00E9;s, dans un contexte de financement de la fili&#x00E8;re d&#x00E9;j&#x00E0; tendu et la concurrence de plus en plus croissante des plateformes.</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2025-10-24", "datePublication": "2025-10-29", "soumisArticle40": "false", "etatDesTraitements": {"etat": {"code": "DI", "libelle": "Discut\u00e9"}, "sousEtat": {"code": "DI", "libelle": "Rejet\u00e9"}}, "dateSort": "2025-10-30T00:21:05+01:00", "sort": "Rejet\u00e9"}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO419604B1906P2D1N000219?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "article99": "false", "loiReference": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionCommune": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionIdentique": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "accordGouvernementDepotHorsDelai": "Sans objet"}}