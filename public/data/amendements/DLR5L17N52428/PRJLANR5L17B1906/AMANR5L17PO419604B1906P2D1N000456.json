rtoucheInformatif": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenuAuteur": {"dispositifAmdtCreditPLF": {"listeProgrammes": {"programme": [{"libelle": "Enseignement scolaire public du premier degr\u00e9", "programmeRef": "639363", "autorisationEngagement": "24181478", "creditPaiement": "24181478", "action": "modification", "lignesCredits": {"ligneCredit": {"id": "18851", "libelle": "dont titre 2", "autorisationEngagement": "24181478", "creditPaiement": "24181478", "action": "modification"}}}, {"libelle": "Enseignement scolaire public du second degr\u00e9", "programmeRef": "639365", "autorisationEngagement": "18431595", "creditPaiement": "18431595", "action": "modification", "lignesCredits": {"ligneCredit": {"id": "18853", "libelle": "dont titre 2", "autorisationEngagement": "18431595", "creditPaiement": "18431595", "action": "modification"}}}, {"libelle": "Vie de l'\u00e9l\u00e8ve", "programmeRef": "639367", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Enseignement priv\u00e9 du premier et du second degr\u00e9s", "programmeRef": "639369", "autorisationEngagement": "9918920", "creditPaiement": "9918920", "action": "modification", "lignesCredits": {"ligneCredit": {"id": "18855", "libelle": "dont titre 2", "autorisationEngagement": "9918920", "creditPaiement": "9918920", "action": "modification"}}}, {"libelle": "Soutien de la politique de l'\u00e9ducation nationale", "programmeRef": "639371", "autorisationEngagement": "-52531993", "creditPaiement": "-52531993", "action": "modification", "lignesCredits": {"ligneCredit": {"id": "18857", "libelle": "dont titre 2", "autorisationEngagement": "-52531993", "creditPaiement": "-52531993", "action": "modification"}}}, {"libelle": "Enseignement technique agricole", "programmeRef": "639373", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}]}, "soldeAE": "0", "soldeCP": "0", "cpEgalAe": "true"}, "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p style=\"text-align: justify;\">Cet amendement du groupe Socialistes et apparent&#x00E9;s vise &#x00E0; revenir sur la suppression des&nbsp;4&nbsp;000 enseignants pour le rentr&#x00E9;e 2026.</p><p style=\"text-align: justify;\">Depuis 2017, ce seront pr&#x00E8;s de 10&nbsp;000 postes d&#x2019;enseignants qui auront &#x00E9;t&#x00E9; supprim&#x00E9;s dans l&#x2019;&#x00E9;ducation nationale&nbsp;!</p><p style=\"text-align: justify;\">L&#x2019;argument avanc&#x00E9; par le Gouvernement n&#x2019;est pas entendable. Certes le nombre d&#x2019;&#x00E9;l&#x00E8;ves est la baisse. N&#x00E9;anmoins, alors que la France fait encore partie des pays europ&#x00E9;ens avec le plus d&#x2019;enfants par classe, nous estimons que cette baisse d&#x2019;effectif doit &#x00EA;tre l&#x2019;opportunit&#x00E9; de diminuer le nombre</p><p style=\"text-align: justify;\">d&#x2019;&#x00E9;l&#x00E8;ves par classes.</p><p style=\"text-align: justify;\">Avoir des effectifs moins importants est un des leviers essentiels pour am&#x00E9;liorer la r&#x00E9;ussite scolaire des &#x00E9;l&#x00E8;ves, pour favoriser un climat scolaire serein, et pour &#x00E9;viter les in&#x00E9;galit&#x00E9;s scolaire et lutter contre les discriminations. Cela permettrait ainsi d&#x2019;am&#x00E9;liorer les conditions de travail des enseignants que le Gouvernement peine &#x00E0; recruter&nbsp;!</p><p style=\"text-align: justify;\">Cet amendement vise &#x00E0;&nbsp;:</p><p style=\"text-align: justify;\">&#x2013;&nbsp;abonder le titre II de l&#x2019;action 02 du Programme 140 Enseignement scolaire public du&nbsp;1<sup>er</sup> degr&#x00E9; de 24181478&nbsp;&#x20AC;</p><p style=\"text-align: justify;\">&#x2013;&nbsp;abonder le titre II de l&#x2019;action 01 du Programme 141 Enseignement scolaire public du&nbsp;2<sup>nd</sup> degr&#x00E9; de&nbsp;18431595&nbsp;&#x20AC;</p><p style=\"text-align: justify;\">&#x2013;&nbsp;abonder de 6&#x202F;138&#x202F;080&nbsp;&#x20AC; le titre II de l&#x2019;action 02 et de 3&#x202F;780&#x202F;840&nbsp;&#x20AC; le titre II de l&#x2019;action 03 du Programme 139 &#x00AB;&nbsp;Enseignement priv&#x00E9; du premier et du second degr&#x00E9;&nbsp;&#x00BB;</p><p style=\"text-align: justify;\">&#x2013;&nbsp;diminue le titre II de l&#x2019;action 01 du programme 214 Soutien de la politique de l&#x2019;&#x00E9;ducation nationale de&nbsp;52531993&nbsp;&#x20AC;</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2025-10-31", "datePublication": "2025-11-04", "soumisArticle40": "false", "etatDesTraitements": {"etat": {"code": "DI", "libelle": "Discut\u00e9"}, "sousEtat": {"code": "DI", "libelle": "Adopt\u00e9"}}, "dateSort": "2025-11-04T21:13:54+01:00", "sort": "Adopt\u00e9"}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO419604B1906P2D1N000456?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "article99": "false", "loiReference": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionCommune": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instan