alse", "urlDivisionTexteVise": "/17/textes/1907.asp#D_Article_39"}, "amendementStandard": {"alinea": {"avant_A_Apres": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "numero": "4", "alineaDesignation": "Alin\u00e9a 4"}}}, "corps": {"cartoucheInformatif": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenuAuteur": {"dispositif": "<p style=\"text-align: justify;\">Supprimer l&#x2019;alin&#x00E9;a&nbsp;4.</p>", "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p style=\"text-align: justify;\">L&#x2019;alin&#x00E9;a&nbsp;4 de l&#x2019;article&nbsp;39 modifie l&#x2019;article L 461&#x2011;1 du code de la s&#x00E9;curit&#x00E9; sociale. Cette modification pr&#x00E9;voit que lorsque la victime est atteinte d&#x2019;une maladie figurant dans un tableau de maladie professionnelle mais qu&#x2019;elle ne satisfait pas toutes les conditions pr&#x00E9;vues dans les diff&#x00E9;rentes colonnes du tableau (d&#x00E9;lai de prise en charge, dur&#x00E9;e d&#x2019;exposition, liste de m&#x00E9;tiers ou de circonstances d&#x2019;exposition&#x2026;), son dossier sera d&#x00E9;sormais examin&#x00E9; par deux m&#x00E9;decins conseil de la S&#x00E9;curit&#x00E9; sociale et non plus par le C2RMP.</p><p style=\"text-align: justify;\">L&#x2019;Andeva, et de nombreuses organisations syndicales ainsi que de nombreux experts de la r&#x00E9;paration des maladies professionnelles consid&#x00E8;rent que cette &#x00E9;volution sera d&#x00E9;favorable aux victimes sans, de surcro&#x00EE;t, r&#x00E9;pondre aux difficult&#x00E9;s d&#x2019;engorgement des C2RMP qui appellent notamment &#x00E0; corriger la v&#x00E9;tust&#x00E9; des tableaux et &#x00E0; adapter les listes de travaux exposants aux donn&#x00E9;es scientifiques actuelles.&nbsp;</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2025-10-24", "datePublication": "2025-10-29", "soumisArticle40": "false", "etatDesTraitements": {"etat": {"code": "DI", "libelle": "Discut\u00e9"}, "sousEtat": {"code": "DI", "libelle": "Adopt\u00e9"}}, "dateSort": "2025-10-31T15:21:43+01:00", "sort": "Adopt\u00e9"}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO420120B1907P0D1N001596?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "article99": "false", "loiReference": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionCommune": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionIdentique": {"idDiscussion": "81711", "typePosition": "Dernier"}, "accordGouvernementDepotHorsDelai": "Sans objet"}}