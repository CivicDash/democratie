ogramme": [{"libelle": "Formations sup\u00e9rieures et recherche universitaire", "programmeRef": "649413", "autorisationEngagement": "-10000000", "creditPaiement": "-10000000", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Vie \u00e9tudiante", "programmeRef": "649415", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Recherches scientifiques et technologiques pluridisciplinaires", "programmeRef": "649417", "autorisationEngagement": "10000000", "creditPaiement": "10000000", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Recherche spatiale", "programmeRef": "649419", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Recherche dans les domaines de l'\u00e9nergie, du d\u00e9veloppement et de la mobilit\u00e9 durables", "programmeRef": "649421", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Recherche et enseignement sup\u00e9rieur en mati\u00e8re \u00e9conomique et industrielle", "programmeRef": "649423", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Recherche duale (civile et militaire)", "programmeRef": "649425", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Enseignement sup\u00e9rieur et recherche agricoles", "programmeRef": "649427", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}]}, "soldeAE": "0", "soldeCP": "0", "cpEgalAe": "true"}, "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p style=\"text-align: justify;\">Aujourd&#x2019;hui, de nombreux malades atteints par la maladie de Lyme sont en errance th&#x00E9;rapeutique et la prise en charge et le traitement de cette maladie divisent la communaut&#x00E9; scientifique. Cette division contribue &#x00E0; alimenter le trouble chez les patients et nombre de praticiens, ce qui suffit &#x00E0; justifier le besoin d&#x2019;apporter des cr&#x00E9;dits cons&#x00E9;quents &#x00E0; la recherche sur cette maladie, d&#x2019;autant que le nombre de cas recens&#x00E9;s est en constante hausse (67&nbsp;000 cas en 2018 contre 45&nbsp;000 en 2017).</p><p style=\"text-align: justify;\">Les financements d&#x00E9;di&#x00E9;s &#x00E0; la maladie de Lyme sont globalement insuffisants et r&#x00E9;partis sur un grand nombre de projets disparates.</p><p style=\"text-align: justify;\">Tous les acteurs partagent ce diagnostic et incitent &#x00E0; une hausse des financements d&#x00E9;di&#x00E9;s. Il y a donc urgence &#x00E0; doter l&#x2019;INSERM des moyens n&#x00E9;cessaires pour mener &#x00E0; bien des travaux de recherche fondamentale et appliqu&#x00E9;e dans le cadre du plan &#x00AB;&nbsp;Maladie de Lyme&nbsp;&#x00BB;.</p><p style=\"text-align: justify;\">L&#x2019;objet de cet amendement est de donner les moyens n&#x00E9;cessaires &#x00E0; la recherche pour pouvoir apporter des r&#x00E9;ponses aux patients et aux associations qui les repr&#x00E9;sentent. Il est ainsi propos&#x00E9; de fl&#x00E9;cher 10 millions d&#x2019;euros de cr&#x00E9;dits suppl&#x00E9;mentaires vers l&#x2019;action 15 &#x00AB;&nbsp;Recherches scientifiques et technologiques en sciences de la vie et de la sant&#x00E9;&nbsp;&#x00BB; du programme 172 &#x00AB;&nbsp;Recherches scientifiques et technologiques pluridisciplinaires&nbsp;&#x00BB; afin d&#x2019;abonder la subvention pour charges de service public (SCSP) de l&#x2019;INSERM&nbsp;; r&#x00E9;duisant, pour compenser, de 10 millions d&#x2019;euros les cr&#x00E9;dits de l&#x2019;action 17&#x00AB;&nbsp;Recherche&nbsp;&#x00BB; au sein du programme 150 &#x00AB;&nbsp;Formations sup&#x00E9;rieures et recherche universitaire&nbsp;&#x00BB;.</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2025-10-29", "datePublication": "2025-11-09", "soumisArticle40": "false", "etatDesTraitements": {"etat": {"code": "DI", "libelle": "Discut\u00e9"}, "sousEtat": {"code": "DI", "libelle": "Rejet\u00e9"}}, "dateSort": "2025-11-09T15:52:46+01:00", "sort": "Rejet\u00e9"}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO59048B1906P2D1N000417?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "article99": "false", "loiReference": {"codeLoi": "3", "divisionCodeLoi": "15"}, "discussionCommune": {"idDiscussion": "34387", "typePosition": "Milieu"}, "discussionIdentique": {"idDiscussion": "84471", "typePosition": "Dernier"}, "accordGouvernementDepotHorsDelai": "Sans objet"}}