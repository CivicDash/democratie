sionVisee": {"codeEtat": "B", "codeMissionMinefi": "CB", "libelleMission": "Culture", "missionRef": "3325"}}, "corps": {"cartoucheInformatif": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenuAuteur": {"dispositifAmdtCreditPLF": {"listeProgrammes": {"programme": [{"libelle": "Patrimoines", "programmeRef": "593207", "autorisationEngagement": "1000000", "creditPaiement": "1000000", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Cr\u00e9ation", "programmeRef": "593209", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Transmission des savoirs et d\u00e9mocratisation de la culture", "programmeRef": "593211", "autorisationEngagement": "-1000000", "creditPaiement": "-1000000", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Soutien aux politiques du minist\u00e8re de la culture", "programmeRef": "593213", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}]}, "soldeAE": "0", "soldeCP": "0", "cpEgalAe": "true"}, "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p style=\"text-align: justify;\">&#x00C0;&nbsp;travers cet amendement, les cosignataires s&#x2019;alarment du manque de s&#x00E9;curisation des lieux culturels exposant nos &#x0153;uvres patrimoniales inestimables.</p><p style=\"text-align: justify;\">Le cambriolage du Louvre il y a quelques semaines et le vol de 9 pi&#x00E8;ces de joaillerie a profond&#x00E9;ment choqu&#x00E9; les fran&#x00E7;aises et les fran&#x00E7;ais. Les conditions dans lesquelles ce vol a &#x00E9;t&#x00E9; rendu possible d&#x00E9;montrent &#x00E0; quel point les mus&#x00E9;es et lieux d&#x2019;exposition sont vuln&#x00E9;rables.</p><p style=\"text-align: justify;\">C&#x2019;est pourquoi, cet amendement propose de sanctuariser 1 million d&#x2019;euros pour la s&#x00E9;curisation des sites.&nbsp;</p><p style=\"text-align: justify;\">Afin de se conformer &#x00E0; la LOLF et aux r&#x00E8;gles de recevabilit&#x00E9; des amendements, cet amendement est ainsi r&#x00E9;dig&#x00E9;&nbsp;:</p><p style=\"text-align: justify;\">L&#x2019;action 1 du programme 175&nbsp;est abond&#x00E9;e en AE et en CP de 1 million d&#x2019;euros.</p><p style=\"text-align: justify;\">Ces cr&#x00E9;dits sont pr&#x00E9;lev&#x00E9;s hors titre 2 sur l&#x2019;action 1&nbsp;du programme 361.</p><p style=\"text-align: justify;\">Il est demand&#x00E9; au Gouvernement de lever le gage.</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2025-10-24", "datePublication": "2025-10-29", "soumisArticle40": "false", "etatDesTraitements": {"etat": {"code": "DI", "libelle": "Discut\u00e9"}, "sousEtat": {"code": "DI", "libelle": "Rejet\u00e9"}}, "dateSort": "2025-10-29T18:47:08+01:00", "sort": "Rejet\u00e9"}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO419604B1906P2D1N000196?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "