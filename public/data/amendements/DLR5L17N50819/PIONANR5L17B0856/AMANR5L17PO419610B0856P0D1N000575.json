{"amendement": {"@xmlns": "http://schemas.assemblee-nationale.fr/referentiel", "uid": "AMANR5L17PO419610B0856P0D1N000575", "chronotag": "1757947644084", "legislature": "17", "identification": {"numeroLong": "CE575", "numeroOrdreDepot": "575", "prefixeOrganeExamen": "CION-ECO", "numeroRect": "0"}, "examenRef": "EXANR5L17PO419610B0856P0D1", "texteLegislatifRef": "PIONANR5L17B0856", "triAmendement": "diaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaks", "cardinaliteAmdtMultiples": "1", "amendementParentRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "signataires": {"auteur": {"typeAuteur": "D\u00e9put\u00e9", "gouvernementRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "acteurRef": "PA793238", "groupePolitiqueRef": "PO845401", "auteurRapporteurOrganeRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, "cosignataires": {"acteurRef": ["PA841495", "PA793246", "PA841139", "PA841605", "PA793592", "PA794354", "PA841837", "PA794590", "PA642988", "PA841825", "PA719436", "PA793298", "PA841479", "PA841575", "PA842227"]}, "suffixe": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "libelle": "M.&#160;Barth&#232;s,  M.&#160;Amblard, M.&#160;Falcon, M.&#160;Gabarron, M.&#160;Golliot, Mme&#160;Grangier, Mme&#160;Laporte, M.&#160;Le&#160;Bourgeois, M.&#160;Loubet, M.&#160;de&#160;L&#233;pinau, M.&#160;Patrice&#160;Martin, M.&#160;Meizonnet, M.&#160;Tivoli, M.&#160;Weber, M.&#160;Vos et M.&#160;Rivi&#232;re"}, "pointeurFragmentTexte": {"partieAmendableRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "division": {"titre": "Article 4", "articleDesignationCourte": "ART. 4", "articleDesignation": "ARTICLE 4", "type": "ARTICLE", "avant_A_Apres": "A", "divisionRattachee": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "articleAdditionnel": "false", "chapitreAdditionnel": "false", "urlDivisionTexteVise": "/17/textes/0856.asp#D_Article_4"}, "amendementStandard": {"alinea": {"avant_A_Apres": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "numero": "2", "alineaDesignation": "Alin\u00e9a 2"}}}, "corps": {"cartoucheInformatif": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenuAuteur": {"dispositif": "<p style=\"text-align: justify;\">&#x00C0;&nbsp;l&#x2019;alin&#x00E9;a&nbsp;2,&nbsp;apr&#x00E8;s le mot&nbsp;:</p><p style=\"text-align: justify;\">&#x00AB;&nbsp;prairies&nbsp;&#x00BB;,&nbsp;</p><p style=\"text-align: justify;\">ins&#x00E9;rer les mots&nbsp;:</p><p style=\"text-align: justify;\">&#x00AB;&nbsp;,&nbsp;une am&#x00E9;lioration de&nbsp;la couverture et des indemnisations,<i>&nbsp;</i>&nbsp;&#x00BB;.</p>", "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p style=\"text-align: justify;\">D&#x00E9;sormais les al&#x00E9;as climatiques deviennent la norme et les ann&#x00E9;es sans, des exceptions. Ces al&#x00E9;as remettent de plus en plus en cause la capacit&#x00E9; &#x00E9;conomique pour les paysans de conserver ces surfaces telles quelles.&nbsp;</p><p style=\"text-align: justify;\">Dans un contexte de&nbsp;diminution globale de l&#x2019;ensemble des cheptels fran&#x00E7;ais, les prairies sont indispensables &#x00E0; l&#x2019;&#x00E9;levage et malheureusement vuln&#x00E9;rables aux al&#x00E9;as climatiques extr&#x00EA;mes, elles permettent pourtant de stocker du carbone et de lutter contre le changement climatique. Une meilleure protection des prairies conduit &#x00E0; une meilleure protection des &#x00E9;levages restants, et de la biodiversit&#x00E9;.&nbsp;</p><p style=\"text-align: justify;\">Cet amendement vise &#x00E0; renforcer la couverture prise en charge par l&#x2019;assurance r&#x00E9;colte pour ces surfaces afin de mieux s&#x00E9;curiser le revenu des agriculteurs et maintenir des terrains en prairies, quand bien-m&#x00EA;me ces derniers n&#x2019;aurait pas permis &#x00E0; l&#x2019;agriculteur de toucher un revenu suffisant.&nbsp;</p><p style=\"text-align: justify;\">Cet amendement a pour objectif de restaurer et prot&#x00E9;ger la comp&#x00E9;titivit&#x00E9; de l&#x2019;&#x00E9;levage fran&#x00E7;ais.&nbsp;</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2025-05-09", "datePublication": "2025-05-16", "soumisArticle40": "false", "etatDesTraitements": {"etat": {"code": "DI", "libelle": "Discut\u00e9"}, "sousEtat": {"code": "DI", "libelle": "Tomb\u00e9"}}, "dateSort": "2025-05-16T11:49:13+02:00", "sort": "Tomb\u00e9"}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO419610B0856P0D1N000575?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "article99": "false", "loiReference": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionCommune": {"idDiscussion": "30790", "typePosition": "Dernier"}, "discussionIdentique": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "accordGouvernementDepotHorsDelai": "Sans objet"}}