: {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Charge de la dette de SNCF R\u00e9seau reprise par l'\u00c9tat (cr\u00e9dits \u00e9valuatifs)", "programmeRef": "683669", "autorisationEngagementSupplementaire": "0", "creditPaiementSupplementaire": "0", "autorisationEngagementAnnule": "0", "creditPaiementAnnule": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Dotation du M\u00e9canisme europ\u00e9en de stabilit\u00e9", "programmeRef": "683671", "autorisationEngagementSupplementaire": "0", "creditPaiementSupplementaire": "0", "autorisationEngagementAnnule": "0", "creditPaiementAnnule": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Augmentation de capital de la Banque europ\u00e9enne d'investissement", "programmeRef": "683673", "autorisationEngagementSupplementaire": "0", "creditPaiementSupplementaire": "0", "autorisationEngagementAnnule": "0", "creditPaiementAnnule": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Fonds de soutien relatif aux pr\u00eats et contrats financiers structur\u00e9s \u00e0 risque", "programmeRef": "683675", "autorisationEngagementSupplementaire": "0", "creditPaiementSupplementaire": "0", "autorisationEngagementAnnule": "0", "creditPaiementAnnule": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Amortissement de la dette de l'\u00c9tat li\u00e9e \u00e0 la covid-19", "programmeRef": "683677", "autorisationEngagementSupplementaire": "0", "creditPaiementSupplementaire": "0", "autorisationEngagementAnnule": "0", "creditPaiementAnnule": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}]}, "totalAE": {"supplementaire": "0", "annule": "-1", "solde": "1"}, "totalCP": {"supplementaire": "0", "annule": "-1", "solde": "1"}, "cpEgalAe": "true"}, "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p style=\"text-align: justify;\">Cet amendement propose de r&#x00E9;duire symboliquement d&#x2019;un euro en AE et CP l&#x2019;annulation des cr&#x00E9;dits li&#x00E9;s &#x00E0; la charge de la dette sur le programme 117&nbsp; &#x00AB; Charge de la dette et tr&#x00E9;sorerie de l'&#x00C9;tat &#x00BB;. Par ce geste minimal, il s&#x2019;agit de souligner un d&#x00E9;calage d&#x00E9;sormais &#x00E9;vident : depuis des ann&#x00E9;es, et plus encore sous les gouvernements Barnier puis Bayrou, la dette a &#x00E9;t&#x00E9; &#x00E9;rig&#x00E9;e en menace permanente pour justifier des politiques d&#x2019;aust&#x00E9;rit&#x00E9; r&#x00E9;p&#x00E9;t&#x00E9;es, au d&#x00E9;triment des services publics et des investissements d&#x2019;avenir.</p><p style=\"text-align: justify;\">Or l&#x2019;ex&#x00E9;cution 2025 r&#x00E9;v&#x00E8;le une r&#x00E9;alit&#x00E9; tr&#x00E8;s diff&#x00E9;rente : pr&#x00E8;s de 2,9 milliards d&#x2019;euros de charge de la dette disparaissent non pas gr&#x00E2;ce &#x00E0; une strat&#x00E9;gie gouvernementale, mais en raison d&#x2019;une &#x00E9;volution conjoncturelle des taux bien plus favorable qu&#x2019;annonc&#x00E9;. Ce d&#x00E9;menti budg&#x00E9;taire met en lumi&#x00E8;re l&#x2019;exc&#x00E8;s dramatique avec lequel la dette a &#x00E9;t&#x00E9; utilis&#x00E9;e comme argument d&#x2019;autorit&#x00E9;, alors m&#x00EA;me que les marges existent, et que l&#x2019;ex&#x00E9;cutif a choisi de ne pas les mobiliser au service des priorit&#x00E9;s sociales, &#x00E9;conomiques et &#x00E9;cologiques du pays.</p><p style=\"text-align: justify;\">Cet amendement rappelle, par un euro symbolique, qu&#x2019;il est temps de rompre avec&nbsp;cette dramaturgie de la dette qui a trop longtemps servi de paravent politique, et de revenir &#x00E0; une lecture sinc&#x00E8;re, objective et responsable des finances publiques.</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2025-11-13", "datePublication": "2025-11-15", "soumisArticle40": "true", "etatDesTraitements": {"etat": {"code": "AC", "libelle": "A discuter"}, "sousEtat": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, "dateSort": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "sort": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO838901B2068P0D1N000126?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "article99": "false", "loiReference": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionCommune": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionIdentique": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "accordGouvernementDepotHorsDelai": "Sans objet"}}