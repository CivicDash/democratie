{"amendement": {"@xmlns": "http://schemas.assemblee-nationale.fr/referentiel", "uid": "AMANR5L17PO420120B1100P0D1N000601", "chronotag": "1757947889609", "legislature": "17", "identification": {"numeroLong": "AS601", "numeroOrdreDepot": "601", "prefixeOrganeExamen": "CION-SOC", "numeroRect": "0"}, "examenRef": "EXANR5L17PO420120B1100P0D1", "texteLegislatifRef": "PIONANR5L17B1100", "triAmendement": "buaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaabjaw", "cardinaliteAmdtMultiples": "1", "amendementParentRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "signataires": {"auteur": {"typeAuteur": "D\u00e9put\u00e9", "gouvernementRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "acteurRef": "PA722102", "groupePolitiqueRef": "PO845407", "auteurRapporteurOrganeRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, "cosignataires": {"acteurRef": ["PA795962", "PA841601", "PA794658", "PA719550", "PA346782", "PA267200", "PA607553", "PA841927", "PA721234"]}, "suffixe": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "libelle": "Mme&#160;Vidal,  Mme&#160;Missoffe, Mme&#160;Levasseur, M.&#160;Fait, Mme&#160;Liliana&#160;Tanguy, M.&#160;Juvin, M.&#160;Huyghe, M.&#160;Potier, Mme&#160;Ronceret et Mme&#160;Maud&#160;Petit"}, "pointeurFragmentTexte": {"partieAmendableRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "division": {"titre": "Article 6", "articleDesignationCourte": "ART. 6", "articleDesignation": "ARTICLE 6", "type": "ARTICLE", "avant_A_Apres": "A", "divisionRattachee": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "articleAdditionnel": "false", "chapitreAdditionnel": "false", "urlDivisionTexteVise": "/17/textes/1100.asp#D_Article_6"}, "amendementStandard": {"alinea": {"avant_A_Apres": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "numero": "4", "alineaDesignation": "Alin\u00e9a 4"}}}, "corps": {"cartoucheInformatif": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenuAuteur": {"dispositif": "<p style=\"text-align: justify;\">&#x00C0;&nbsp;l&#x2019;alin&#x00E9;a&nbsp;4, apr&#x00E8;s le mot&nbsp;:</p><p style=\"text-align: justify;\">&#x00AB;&nbsp;pluri-professionnelle&nbsp;&#x00BB;,&nbsp;</p><p style=\"text-align: justify;\">ins&#x00E9;rer les mots&nbsp;:</p><p style=\"text-align: justify;\">&#x00AB;&nbsp;et pluridisciplinaire&nbsp;&#x00BB;.</p>", "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p style=\"text-align: justify;\">Le pr&#x00E9;sent amendement vise &#x00E0; compl&#x00E9;ter la mention de la &#x00AB;&nbsp;proc&#x00E9;dure coll&#x00E9;giale pluri-professionnelle&nbsp;&#x00BB; par l&#x2019;ajout du terme &#x00AB;&nbsp;pluridisciplinaire&nbsp;&#x00BB;.</p><p style=\"text-align: justify;\">Cette pr&#x00E9;cision a pour objectif de mieux refl&#x00E9;ter la r&#x00E9;alit&#x00E9; de la proc&#x00E9;dure d&#x2019;appr&#x00E9;ciation pr&#x00E9;vue &#x00E0; l&#x2019;article L.&nbsp;1111&#x2011;12&#x2011;2 du Code de la sant&#x00E9; publique. En effet, si la coll&#x00E9;gialit&#x00E9; implique d&#x00E9;j&#x00E0; la participation de plusieurs professionnels de sant&#x00E9;, l&#x2019;efficacit&#x00E9; et la pertinence de cette d&#x00E9;marche reposent &#x00E9;galement sur la diversit&#x00E9; des disciplines repr&#x00E9;sent&#x00E9;es, qu&#x2019;elles soient m&#x00E9;dicales ou param&#x00E9;dicales.</p><p style=\"text-align: justify;\">Ajouter le terme &#x00AB;&nbsp;pluridisciplinaire&nbsp;&#x00BB; permet d&#x2019;insister sur la n&#x00E9;cessit&#x00E9; d&#x2019;associer des points de vue issus de sp&#x00E9;cialit&#x00E9;s diff&#x00E9;rentes afin de garantir une &#x00E9;valuation globale, &#x00E9;clair&#x00E9;e et nuanc&#x00E9;e de la situation du patient.</p><p style=\"text-align: justify;\">Cette pr&#x00E9;cision s&#x2019;inscrit dans une exigence d&#x2019;effectivit&#x00E9; et d&#x2019;efficience de la coll&#x00E9;gialit&#x00E9;, en renfor&#x00E7;ant l&#x2019;exigence d&#x2019;une r&#x00E9;elle compl&#x00E9;mentarit&#x00E9; des expertises. Elle contribue &#x00E0; s&#x00E9;curiser la d&#x00E9;cision m&#x00E9;dicale tout en assurant une meilleure prise en compte de la complexit&#x00E9; des situations individuelles.</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2025-04-04", "datePublication": "2025-04-29", "soumisArticle40": "false", "etatDesTraitements": {"etat": {"code": "DI", "libelle": "Discut\u00e9"}, "sousEtat": {"code": "DI", "libelle": "Retir\u00e9"}}, "dateSort": "2025-04-29T22:25:05+02:00", "sort": "Retir\u00e9"}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO420120B1100P0D1N000601?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "article99": "false", "loiReference": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionCommune": {"idDiscussion": "30128", "typePosition": "Premier"}, "discussionIdentique": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "accordGouvernementDepotHorsDelai": "Sans objet"}}