{"amendement": {"@xmlns": "http://schemas.assemblee-nationale.fr/referentiel", "uid": "AMANR5L17PO419604B1009P0D1N000054", "chronotag": "1757947480192", "legislature": "17", "identification": {"numeroLong": "AC54", "numeroOrdreDepot": "54", "prefixeOrganeExamen": "CION-CEDU", "numeroRect": "0"}, "examenRef": "EXANR5L17PO419604B1009P0D1", "texteLegislatifRef": "PIONANR5L17B1009", "triAmendement": "eiaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaadi", "cardinaliteAmdtMultiples": "1", "amendementParentRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "signataires": {"auteur": {"typeAuteur": "D\u00e9put\u00e9", "gouvernementRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "acteurRef": "PA840171", "groupePolitiqueRef": "PO845419", "auteurRapporteurOrganeRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, "cosignataires": {"acteurRef": ["PA795156", "PA841295", "PA841813", "PA841853", "PA342196", "PA842263", "PA841367"]}, "suffixe": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "libelle": "M.&#160;Emmanuel&#160;Gr&#233;goire,  Mme&#160;Keloua&#160;Hachi, M.&#160;Courbon, Mme&#160;Herouin-L&#233;autey, Mme&#160;C&#233;line&#160;Hervieu, Mme&#160;Rouaux, Mme&#160;Hadizadeh et M.&#160;Proen&#231;a"}, "pointeurFragmentTexte": {"partieAmendableRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "division": {"titre": "Article 3", "articleDesignationCourte": "ART. 3", "articleDesignation": "ARTICLE 3", "type": "ARTICLE", "avant_A_Apres": "A", "divisionRattachee": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "articleAdditionnel": "false", "chapitreAdditionnel": "false", "urlDivisionTexteVise": "/17/textes/1009.asp#D_Article_3"}, "amendementStandard": {"alinea": {"avant_A_Apres": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "numero": "7", "alineaDesignation": "Alin\u00e9a 7"}}}, "corps": {"cartoucheInformatif": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenuAuteur": {"dispositif": "<p style=\"text-align: justify;\">Supprimer les alin&#x00E9;as 7 &#x00E0; 11.</p>", "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p style=\"text-align: justify;\">Cet amendement vise &#x00E0; supprimer le paragraphe 2bis qui cr&#x00E9;e des nouvelles sections disciplinaires r&#x00E9;gionales.</p><p style=\"text-align: justify;\">Premi&#x00E8;rement, en r&#x00E9;formant profond&#x00E9;ment les proc&#x00E9;dures disciplinaires, l&#x2019;objet de ce paragraphe semble largement d&#x00E9;passer le champ de la proposition de loi initiale, &#x00E0; savoir la lutte contre l&#x2019;antis&#x00E9;mitisme, le racisme et les discriminations.</p><p style=\"text-align: justify;\">Deuxi&#x00E8;mement, les modalit&#x00E9;s encore floues de ces nouvelles instances nous inqui&#x00E8;tent.</p><p style=\"text-align: justify;\">Ces sections seraient pr&#x00E9;sid&#x00E9;es par un magistrat administratif, elles pourraient &#x00EA;tre saisie par les recteurs acad&#x00E9;miques et se substituer aux sections disciplinaires internes des universit&#x00E9;s. Cela revient &#x00E0; dessaisir les pr&#x00E9;sidents d&#x2019;universit&#x00E9; de leur pouvoir disciplinaire et pose un probl&#x00E8;me d&#x2019;autonomie des universit&#x00E9;s.</p><p style=\"text-align: justify;\">Nous ne pouvons pas soutenir la cr&#x00E9;ation de ces sections, ins&#x00E9;r&#x00E9;es en cours de navette l&#x00E9;gislative, dont on ne connait pas les modalit&#x00E9;s, toutes renvoy&#x00E9;es &#x00E0; un d&#x00E9;cret.</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2025-04-26", "datePublication": "2025-04-28", "soumisArticle40": "false", "etatDesTraitements": {"etat": {"code": "RT", "libelle": "Retir\u00e9"}, "sousEtat": {"code": "RT", "libelle": "Retir\u00e9 apr\u00e8s publication"}}, "dateSort": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "sort": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO419604B1009P0D1N000054?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "article99": "false", "loiReference": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionCommune": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionIdentique": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "accordGouvernementDepotHorsDelai": "Sans objet"}}